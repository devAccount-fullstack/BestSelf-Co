<div
  x-cloak
  x-show="showSoldoutNotification"
  @keydown.escape.window="closeSoldoutMotification();"
  class="tw-fixed tw-inset-0 tw-z-full tw-flex tw-flex-col tw-items-end tw-w-full tw-h-full tw-bg-black/20"
>
  <div
    x-cloak
    x-show="showSoldoutNotification"
    x-transition:enter="tw-transition tw-duration-700"
    x-transition:enter-start="tw-translate-x-full"
    x-transition:enter-end="tw-translate-x-0"
    x-transition:leave="tw-transition tw-duration-700"
    x-transition:leave-start="tw-translate-x-0"
    x-transition:leave-end="tw-translate-x-full"
    class="product-soldout-notification tw-relative tw-z-full tw-flex tw-justify-end tw-h-dvh tw-bg-white max-lg:tw-w-full"
    @click.outside="closeSoldoutMotification();"
  >
    <div
      class="tw-relative tw-z-10 tw-grid tw-grid-cols-1 tw-w-full lg:tw-w-[494px] tw-px-4 tw-py-5 md:tw-px-8 md:tw-py-8 lg:tw-gap-5"
    >
      {%- render 'notification-form',
        product_title: product.title,
        current_variant: current_variant,
        button_style: 'tw-mt-5 selector--atc tw-relative tw-w-full tw-h-12 lg:tw-h-11 tw-flex tw-items-center tw-justify-center tw-bg-sc-yellow tw-rounded-[134px] tw-transition-all tw-duration-200 hover:tw-bg-sc-yellow/80',
        new_notification_form_id: true
      -%}

      <button
        type="button"
        @click="closeSoldoutMotification();"
        class="tw-absolute tw-top-3 tw-right-3 tw-flex-shrink-0 tw-size-3.5 tw-cursor-pointer tw-text-black tw-aspect-square lg:tw-size-5"
      >
        {% render 'icon-42', name: 'close', class: '!tw-size-full' %}
      </button>
    </div>
  </div>
</div>
