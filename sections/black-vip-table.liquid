<section
  id="black-vip-table-{{ section.id }}"
  class="black-vip-table"
  style="background: radial-gradient(circle at 50% 65%, {{ section.settings.gradient_center_color }} -50%, {{ section.settings.gradient_outer_color }} 30%);"
>
  <div class="vip-container">
    <div class="vip-header">
      <div class="vip-eyebrow">{{ section.settings.eyebrow_text }}</div>
      <h2 class="vip-title">
        {{ section.settings.heading }}<br>
        <span>{{ section.settings.subheading }}</span>
      </h2>

      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="vip-btn">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>

    <div class="vip-table">
      <div class="vip-table-header">
        <div>VIP Tier</div>
        <div>Your Reward</div>
        <div>Threshold</div>
      </div>

      {% for block in section.blocks %}
        <div class="vip-row">
          <div>{{ block.settings.tier }}</div>
          <div>{{ block.settings.reward }}</div>
          <div>{{ block.settings.threshold }}</div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.footer_text != blank %}
      <p class="vip-footer">{{ section.settings.footer_text }}</p>
    {% endif %}
  </div>

  <style>
    #black-vip-table-{{ section.id }} {
      color: #fff;
      font-family: 'Inter', sans-serif;
      text-align: center;
      padding: 60px 20px;
      overflow: hidden;
    }

    #black-vip-table-{{ section.id }} .vip-container {
      max-width: 900px;
      margin: 0 auto;
    }

    #black-vip-table-{{ section.id }} .vip-eyebrow {
      background: rgba(255, 255, 255, 0.1);
      padding: 8px 20px;
      display: inline-block;
      border-radius: 50px;
      font-size: 14px;
      margin-bottom: 20px;
    }

    #black-vip-table-{{ section.id }} .vip-title {
      font-size: 32px;
      line-height: 1.3;
      margin-bottom: 15px;
      font-weight: 600;
    }

    #black-vip-table-{{ section.id }} .vip-title span {
      font-style: italic;
      color: #e6b85c;
      font-weight: 400;
    }

    #black-vip-table-{{ section.id }} .vip-btn {
      display: inline-block;
      background: transparent;
      color: #fff;
      border: 1px solid #fff;
      padding: 10px 25px;
      border-radius: 50px;
      font-size: 14px;
      transition: all 0.3s ease;
      margin-top: 20px;
    }

    #black-vip-table-{{ section.id }} .vip-btn:hover {
      background: #fff;
      color: #000;
    }

    #black-vip-table-{{ section.id }} .vip-table {
      margin-top: 50px;
      text-align: left;
      border-top: 1px solid rgba(255,255,255,0.2);
      border-bottom: 1px solid rgba(255,255,255,0.2);
    }

    #black-vip-table-{{ section.id }} .vip-table-header,
    #black-vip-table-{{ section.id }} .vip-row {
      display: grid;
      grid-template-columns: 1fr 1.5fr 1fr;
      gap: 10px;
      padding: 15px 10px;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    #black-vip-table-{{ section.id }} .vip-table-header {
      font-size: 12px;
      opacity: 0.8;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-weight: 500;
    }

    #black-vip-table-{{ section.id }} .vip-row:last-child {
      border-bottom: none;
    }

    #black-vip-table-{{ section.id }} .vip-footer {
      font-size: 14px;
      opacity: 0.8;
      margin-top: 40px;
    }

    @media (max-width: 768px) {
      #black-vip-table-{{ section.id }} .vip-table-header,
      #black-vip-table-{{ section.id }} .vip-row {
        grid-template-columns: 1fr;
        text-align: center;
      }

      #black-vip-table-{{ section.id }} .vip-row div {
        padding: 4px 0;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Black VIP Table",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow text",
      "default": "Today only — Earn 2.5X points on every purchase."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "The More You Love,"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "The More You Save (and Get!)"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Join now and snag 600 bonus points instantly!"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer text",
      "default": "Because you're not just a shopper. You're a builder of habits, a giver of meaningful gifts, and a part of this journey with us."
    },
    {
      "type": "color",
      "id": "gradient_center_color",
      "label": "Gradient center color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "gradient_outer_color",
      "label": "Gradient outer color",
      "default": "#131516"
    }
  ],
  "blocks": [
    {
      "type": "tier",
      "name": "VIP Tier Row",
      "settings": [
        { "type": "text", "id": "tier", "label": "Tier name", "default": "Tier 1" },
        { "type": "text", "id": "reward", "label": "Reward", "default": "25% OFF (all orders)" },
        { "type": "text", "id": "threshold", "label": "Threshold", "default": "No minimum" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Black VIP Table",
      "blocks": [
        { "type": "tier", "settings": { "tier": "Tier 1", "reward": "25% OFF (all orders)", "threshold": "No minimum" } },
        { "type": "tier", "settings": { "tier": "Tier 2", "reward": "25% OFF + Free VIP Gift", "threshold": "$75+" } },
        { "type": "tier", "settings": { "tier": "Tier 3", "reward": "30% OFF + Free VIP Gift", "threshold": "$100–149" } },
        { "type": "tier", "settings": { "tier": "Tier 4", "reward": "35% OFF + Free VIP Gift", "threshold": "$150–199" } }
      ]
    }
  ]
}
{% endschema %}
