<section
id="black-vip-password-{{ section.id }}"
class="black-vip-password"
style="background-color: {{ section.settings.bg_color }};"
>
<div class="vip-bg-left"></div>
<div class="vip-bg-right"></div>

<div class="vip-container">
  {% if section.settings.image != blank %}
    <div class="vip-image">
      <img src="{{ section.settings.image | image_url: '800x800' }}" width="800" height="800" alt="VIP Lock">
    </div>
  {% endif %}

  {% if section.settings.welcome_text != blank %}
    <h3 class="vip-welcome">{{ section.settings.welcome_text }}</h3>
  {% endif %}

  {% if section.settings.heading != blank %}
    <h2 class="vip-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.subheading != blank %}
    <p class="vip-subheading">{{ section.settings.subheading }}</p>
  {% endif %}

  <form class="vip-form">
    <input type="password" placeholder="{{ section.settings.password_placeholder }}" />
    <button type="submit">{{ section.settings.button_label }}</button>
  </form>

  {% if section.settings.italic_text != blank %}
    <p class="vip-italic">{{ section.settings.italic_text }}</p>
  {% endif %}
</div>

<style>
.black-friday-ugc {
  position: relative;
  padding: 60px 0;
  color: #fff;
  text-align: center;
  font-family: "Poppins", sans-serif;
  background: radial-gradient(
      circle at 20% 40%,
      rgba(250, 200, 72, 0.25) 0%,
      transparent 60%
    ),
    radial-gradient(
      circle at 80% 60%,
      rgba(250, 200, 72, 0.25) 0%,
      transparent 60%
    ),
    {{ section.settings.bg_color }};
  background-blend-mode: screen;
  overflow: hidden;
}

.ugc-container {
  max-width: 90%;
  margin: 0 auto;
  position: relative;
  z-index: 2;
}

.ugc-heading {
  font-size: 36px;
  font-family: Libre Baskerville, serif;
  font-weight: 700;
  margin-bottom: 50px;
}

/* ✅ Subtle glow overlay for depth */
.black-friday-ugc::before {
  content: "";
  position: absolute;
  inset: 0;
  background: radial-gradient(
    circle at 50% 0%,
    rgba(250, 200, 72, 0.15) 0%,
    transparent 70%
  );
  z-index: 1;
  pointer-events: none;
}

.splide__slide {
  display: flex;
  justify-content: center;
}

.ugc-video-thumb {
  position: relative;
  width: 379px;
  aspect-ratio: 1 / 1;
  border-radius: 10px;
  overflow: hidden;
  background-color: #43445a;
  cursor: pointer;
  transition: transform 0.3s ease;
  flex-shrink: 0;
}

.ugc-thumbnail {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.ugc-placeholder {
  width: 100%;
  height: 100%;
  background-color: #50516e;
}

.ugc-play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 28px;
  color: #404040;
  pointer-events: none;
  padding: 10px 20px;
  background-color: #FAC848;
  border-radius: 50px;
  text-align: center;
}

/* Modal */
.ugc-modal {
  display: none;
  position: fixed;
  z-index: 9999;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.8);
  align-items: center;
  justify-content: center;
  padding: 20px;
  box-sizing: border-box;
}

.ugc-modal-content {
  position: relative;
  background: #000;
  padding: 10px;
  border-radius: 10px;
  max-width: 800px;
  width: 90%;
}

.ugc-modal-close {
  position: absolute;
  top: 10px;
  right: 15px;
  color: #fff;
  font-size: 28px;
  cursor: pointer;
}

.ugc-video-container iframe {
  width: 100%;
  height: 450px;
  border: none;
}

/* ✅ Responsive */
@media (max-width: 1024px) {
  .ugc-video-thumb {
    width: 300px;
  }
}

@media (max-width: 768px) {
  .ugc-video-thumb {
    width: 240px;
  }
  .ugc-video-container iframe {
    height: 250px;
  }
}

@media (max-width: 480px) {
  .ugc-video-thumb {
    width: 200px;
  }
}
</style>

</section>

{% schema %}
{
"name": "Black VIP Password",
"settings": [
  {
    "type": "image_picker",
    "id": "image",
    "label": "Lock Image"
  },
  {
    "type": "text",
    "id": "welcome_text",
    "label": "Welcome Text",
    "default": "Welcome to Your"
  },
  {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "Private VIP Black Friday Experience"
  },
  {
    "type": "text",
    "id": "subheading",
    "label": "Subheading",
    "default": "You're among the top 5% of our community. This event is just for you."
  },
  {
    "type": "text",
    "id": "password_placeholder",
    "label": "Password Placeholder",
    "default": "Enter password"
  },
  {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Let's go"
  },
  {
    "type": "text",
    "id": "italic_text",
    "label": "Italic Text",
    "default": "Early VIP Access Opens: November 19"
  },
  {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#111"
  }
],
"presets": [
  {
    "name": "Black VIP Password",
    "category": "Black Friday"
  }
]
}
{% endschema %}
