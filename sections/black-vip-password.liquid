<section
  id="black-vip-password-{{ section.id }}"
  class="black-vip-password"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="vip-bg-left"></div>
  <div class="vip-bg-right"></div>
  <div class="vip-image">
  {% if section.settings.image != blank %}
    <img
      src="{{ section.settings.image | image_url: width: 298 }}"
      width="298"
      height="400"
      alt="VIP Lock"
      loading="lazy"
    >
  {% endif %}
</div>

  <div class="vip-container">
    {% if section.settings.image != blank %}
    {% endif %}

    {% if section.settings.welcome_text != blank %}
      <h3 class="vip-welcome">{{ section.settings.welcome_text }}</h3>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="vip-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="vip-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <form class="vip-form">
      <input type="password" placeholder="{{ section.settings.password_placeholder }}" />
      <button type="submit">{{ section.settings.button_label }}</button>
    </form>

    {% if section.settings.italic_text != blank %}
      <p class="vip-italic">{{ section.settings.italic_text }}</p>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Black VIP Password",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Lock Image"
    },
    {
      "type": "text",
      "id": "welcome_text",
      "label": "Welcome Text",
      "default": "Welcome to Your"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Private VIP Black Friday Experience"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "You're among the top 5% of our community. This event is just for you."
    },
    {
      "type": "text",
      "id": "password_placeholder",
      "label": "Password Placeholder",
      "default": "Enter password"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Let's go"
    },
    {
      "type": "text",
      "id": "italic_text",
      "label": "Italic Text",
      "default": "Early VIP Access Opens: November 19"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Black VIP Password",
      "category": "Black Friday"
    }
  ]
}
{% endschema %}

<style>
#black-vip-password-{{ section.id }} {
  position: relative;
  color: #fff;
  font-family: 'Poppins', sans-serif;
  text-align: center;
  padding: 60px 20px;
  background: radial-gradient(circle at center, #0f0f0f 40%, #000 100%);
  height: calc(100vh - 80px);
}

/* Soft glowing yellow sides */
.vip-bg-left {
  position: absolute;
  top: -10%;
  width: 25%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

.vip-bg-right {
  position: absolute;
  bottom: 0;
  width: 25%;
  height: 100%;
  z-index: 1;
  pointer-events: none;
}

.vip-bg-left {
  left: 0;
  background: radial-gradient(circle at left center, rgba(230, 184, 92, 0.2), transparent 70%);
}

.vip-bg-right {
  right: 0;
  background: radial-gradient(circle at right center, rgba(230, 184, 92, 0.2), transparent 70%);
}

.vip-container {
  position: relative;
  z-index: 2;
  top: 50%;
}

/* Lock image */
.vip-image img {
  display: block;
  Z-index: 1;
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  max-width: 100%;
  height: auto;
}

/* Text styling */
.vip-welcome {
  font-size: 31px;
  font-family: Libre Baskerville, serif;
  font-weight: 400;
  margin-bottom: 10px;
}

.vip-heading {
  font-size: 48px;
  font-family: Libre Baskerville, serif;
  font-style: italic;
  color: #C9A062;
  margin-bottom: 15px;
  line-height: 1.3;
}

.vip-subheading {
  font-size: 20px;
  color: #fff;
  font-family: Inter, sans-serif;
  margin-bottom: 35px;
  font-weight: 500;
}

.vip-italic {
  font-style: italic;
  font-family: Libre Baskerville, serif;
  font-size: 20px;
  color: #E9E1D1;
}

.vip-form {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 400px;
  margin: 0 auto 25px;
}

.vip-form input {
  width: 100%;
  padding: 16px 24px; /* extra right padding to make space for button */
  border: 1px solid rgba(255, 255, 255, 0.15);
  background: rgba(30, 30, 30, 0.8);
  border-radius: 50px;
  color: #fff;
  font-size: 20px;
  font-family: Inter, sans-serif;
  transition: border 0.3s ease, box-shadow 0.3s ease;
}

.vip-form input:focus {
  outline: none;
  border-color: #e6b85c;
  box-shadow: 0 0 6px rgba(230, 184, 92, 0.5);
}

.vip-form button {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  background: #e6b85c;
  color: #404040;
  font-weight: 600;
  padding: 16px 36px;
  border: none;
  border-radius: 50px;
  cursor: pointer;
  font-size: 20px;
  font-weight: semi-bold;
  font-family: Inter, sans-serif;
}

.vip-form button:hover {
  background: #f2ca75;
  transform: translateY(-50%) scale(1.05);
  box-shadow: 0 4px 12px rgba(230, 184, 92, 0.3);
}

/* Responsive adjustment */
@media (max-width: 480px) {
  .vip-form {
    width: 90%;
  }

  .vip-form input {
    padding-right: 90px;
    font-size: 13px;
  }

  .vip-form button {
    padding: 8px 18px;
    font-size: 13px;
  }
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .vip-container {
    padding: 40px 25px;
  }
  .vip-heading {
    font-size: 24px;
  }
  .vip-bg-left,
  .vip-bg-right {
    width: 20%;
  }
}
</style>
