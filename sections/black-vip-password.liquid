<section
id="black-vip-password-{{ section.id }}"
class="black-vip-password"
style="background-color: {{ section.settings.bg_color }};"
>
<div class="vip-bg-left"></div>
<div class="vip-bg-right"></div>

<div class="vip-container">
  {% if section.settings.image != blank %}
    <div class="vip-image">
      <img src="{{ section.settings.image | image_url: '800x800' }}" width="800" height="800" alt="VIP Lock">
    </div>
  {% endif %}

  {% if section.settings.welcome_text != blank %}
    <h3 class="vip-welcome">{{ section.settings.welcome_text }}</h3>
  {% endif %}

  {% if section.settings.heading != blank %}
    <h2 class="vip-heading">{{ section.settings.heading }}</h2>
  {% endif %}

  {% if section.settings.subheading != blank %}
    <p class="vip-subheading">{{ section.settings.subheading }}</p>
  {% endif %}

  <form class="vip-form">
    <input type="password" placeholder="{{ section.settings.password_placeholder }}" />
    <button type="submit">{{ section.settings.button_label }}</button>
  </form>

  {% if section.settings.italic_text != blank %}
    <p class="vip-italic">{{ section.settings.italic_text }}</p>
  {% endif %}
</div>

<style>
  #black-vip-password-{{ section.id }} {
    position: relative;
    overflow: hidden;
    color: #fff;
    font-family: 'Poppins', serif;
    text-align: center;
    padding: 80px 20px;
  }

  .vip-bg-left,
  .vip-bg-right {
    position: absolute;
    top: 0;
    width: 15%;
    height: 100%;
    background: #e6b85c;
    z-index: 1;
  }

  .vip-bg-left { left: 0; }
  .vip-bg-right { right: 0; }

  .vip-container {
    position: relative;
    z-index: 2;
    max-width: 600px;
    margin: 0 auto;
    background: rgba(0, 0, 0, 0.6);
    padding: 40px 30px;
    border-radius: 12px;
  }

  .vip-image img {
    width: 100px;
    margin: 0 auto 20px;
    display: block;
  }

  .vip-welcome {
    font-size: 20px;
    margin-bottom: 10px;
    font-weight: 400;
  }

  .vip-heading {
    font-size: 28px;
    font-style: italic;
    color: #e6b85c;
    margin-bottom: 15px;
  }

  .vip-subheading {
    font-size: 14px;
    margin-bottom: 25px;
  }

  .vip-form {
    display: flex;
    justify-content: center;
    gap: 10px;
    flex-wrap: wrap;
    margin-bottom: 20px;
  }

  .vip-form input {
    padding: 10px 15px;
    border: none;
    border-radius: 6px;
    min-width: 200px;
    outline: none;
    font-size: 14px;
  }

  .vip-form button {
    background: #e6b85c;
    color: #000;
    font-weight: 600;
    padding: 10px 20px;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .vip-form button:hover {
    background: #f2ca75;
  }

  .vip-italic {
    font-style: italic;
    font-size: 14px;
    color: #e6b85c;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .vip-container {
      padding: 30px 20px;
    }
    .vip-heading {
      font-size: 22px;
    }
    .vip-bg-left,
    .vip-bg-right {
      width: 10%;
    }
  }

  @media (max-width: 480px) {
    .vip-form {
      flex-direction: column;
    }
    .vip-form button {
      width: 100%;
    }
  }
</style>
</section>

{% schema %}
{
"name": "Black VIP Password",
"settings": [
  {
    "type": "image_picker",
    "id": "image",
    "label": "Lock Image"
  },
  {
    "type": "text",
    "id": "welcome_text",
    "label": "Welcome Text",
    "default": "Welcome to Your"
  },
  {
    "type": "text",
    "id": "heading",
    "label": "Heading",
    "default": "Private VIP Black Friday Experience"
  },
  {
    "type": "text",
    "id": "subheading",
    "label": "Subheading",
    "default": "You're among the top 5% of our community. This event is just for you."
  },
  {
    "type": "text",
    "id": "password_placeholder",
    "label": "Password Placeholder",
    "default": "Enter password"
  },
  {
    "type": "text",
    "id": "button_label",
    "label": "Button Label",
    "default": "Let's go"
  },
  {
    "type": "text",
    "id": "italic_text",
    "label": "Italic Text",
    "default": "Early VIP Access Opens: November 19"
  },
  {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#111"
  }
],
"presets": [
  {
    "name": "Black VIP Password",
    "category": "Black Friday"
  }
]
}
{% endschema %}
