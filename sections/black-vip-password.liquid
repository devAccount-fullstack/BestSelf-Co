<section
  id="black-vip-password-{{ section.id }}"
  class="black-vip-password"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="vip-bg-left"></div>
  <div class="vip-bg-right"></div>

  <div class="vip-container">
    {% if section.settings.image != blank %}
      <div class="vip-image">
        <img src="{{ section.settings.image | image_url: '800x800' }}" width="800" height="800" alt="VIP Lock">
      </div>
    {% endif %}

    {% if section.settings.welcome_text != blank %}
      <h3 class="vip-welcome">{{ section.settings.welcome_text }}</h3>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="vip-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="vip-subheading">{{ section.settings.subheading }}</p>
    {% endif %}

    <form class="vip-form">
      <input type="password" placeholder="{{ section.settings.password_placeholder }}" />
      <button type="submit">{{ section.settings.button_label }}</button>
    </form>

    {% if section.settings.italic_text != blank %}
      <p class="vip-italic">{{ section.settings.italic_text }}</p>
    {% endif %}
  </div>

  <style>
    #black-vip-password-{{ section.id }} {
      position: relative;
      overflow: hidden;
      color: #fff;
      font-family: "Poppins", serif;
      text-align: center;
      padding: 100px 20px;
      background: radial-gradient(ellipse at center, #1a1a1a 0%, #000 100%);
    }

    /* Gold gradient sides */
    .vip-bg-left,
    .vip-bg-right {
      position: absolute;
      top: 0;
      width: 15%;
      height: 100%;
      background: linear-gradient(to right, #e6b85c, transparent);
      z-index: 1;
    }
    .vip-bg-right {
      right: 0;
      background: linear-gradient(to left, #e6b85c, transparent);
    }

    .vip-container {
      position: relative;
      z-index: 2;
      max-width: 600px;
      margin: 0 auto;
      padding: 50px 40px;
      background: rgba(10, 10, 10, 0.8);
      border-radius: 16px;
      box-shadow: 0 0 40px rgba(0, 0, 0, 0.7);
    }

    .vip-image img {
      width: 120px;
      margin: 0 auto 25px;
      display: block;
    }

    .vip-welcome {
      font-size: 20px;
      font-weight: 400;
      margin-bottom: 10px;
      color: #fff;
    }

    .vip-heading {
      font-size: 30px;
      font-style: italic;
      color: #e6b85c;
      margin-bottom: 15px;
      font-weight: 500;
    }

    .vip-subheading {
      font-size: 15px;
      margin-bottom: 30px;
      color: #ccc;
    }

    .vip-subheading em {
      font-style: italic;
      color: #fff;
    }

    .vip-form {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 10px;
      flex-wrap: wrap;
      margin-bottom: 25px;
    }

    .vip-form input {
      padding: 12px 16px;
      border: 1px solid #444;
      background: #111;
      border-radius: 8px;
      min-width: 220px;
      outline: none;
      color: #fff;
      font-size: 15px;
      transition: border 0.3s ease, box-shadow 0.3s ease;
    }

    .vip-form input:focus {
      border-color: #e6b85c;
      box-shadow: 0 0 6px rgba(230, 184, 92, 0.4);
    }

    .vip-form button {
      background: #e6b85c;
      color: #000;
      font-weight: 600;
      padding: 12px 25px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .vip-form button:hover {
      background: #f2ca75;
      transform: translateY(-1px);
    }

    .vip-italic {
      font-style: italic;
      font-size: 15px;
      color: #e6b85c;
      opacity: 0.85;
    }

    /* Responsive */
    @media (max-width: 768px) {
      .vip-container {
        padding: 40px 25px;
      }
      .vip-heading {
        font-size: 24px;
      }
      .vip-bg-left,
      .vip-bg-right {
        width: 10%;
      }
    }

    @media (max-width: 480px) {
      .vip-form {
        flex-direction: column;
      }
      .vip-form input,
      .vip-form button {
        width: 100%;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Black VIP Password",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Lock Image"
    },
    {
      "type": "text",
      "id": "welcome_text",
      "label": "Welcome Text",
      "default": "Welcome to Your"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Private VIP Black Friday Experience"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "You're among the top 5% of our community. This event is just for you."
    },
    {
      "type": "text",
      "id": "password_placeholder",
      "label": "Password Placeholder",
      "default": "Enter password"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Let's go"
    },
    {
      "type": "text",
      "id": "italic_text",
      "label": "Italic Text",
      "default": "Early VIP Access Opens: November 19"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Black VIP Password",
      "category": "Black Friday"
    }
  ]
}
{% endschema %}
