<section
  id="black-friday-claim-{{ section.id }}"
  class="black-friday-claim-section"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="claim-container">
    <h2 class="claim-heading">
      {{ section.settings.heading }}
      <span class="claim-highlight">{{ section.settings.highlight_text }}</span>
    </h2>

    <div class="countdown" id="countdown-{{ section.id }}">
      <div class="count-box">
        <span id="days-{{ section.id }}">00</span>
        <small>Days</small>
      </div>
      <div class="count-box">
        <span id="hours-{{ section.id }}">00</span>
        <small>Hours</small>
      </div>
      <div class="count-box">
        <span id="minutes-{{ section.id }}">00</span>
        <small>Minutes</small>
      </div>
      <div class="count-box">
        <span id="seconds-{{ section.id }}">00</span>
        <small>Seconds</small>
      </div>
    </div>

    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <a
        href="{{ section.settings.button_url }}"
        class="claim-btn"
      >
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>

  <style>
    #black-friday-claim-{{ section.id }} {
      text-align: center;
      color: #fff;
      font-family: "Poppins", sans-serif;
      padding: 60px 20px;
    }

    #black-friday-claim-{{ section.id }} .claim-heading {
      font-size: 28px;
      font-weight: 500;
      line-height: 1.4;
      margin-bottom: 30px;
    }

    #black-friday-claim-{{ section.id }} .claim-highlight {
      color: #f5c542;
      font-style: italic;
      font-weight: 600;
    }

    #black-friday-claim-{{ section.id }} .countdown {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin-bottom: 30px;
    }

    #black-friday-claim-{{ section.id }} .count-box {
      background: #fff;
      color: #000;
      padding: 15px 20px;
      border-radius: 10px;
      min-width: 70px;
    }

    #black-friday-claim-{{ section.id }} .count-box span {
      display: block;
      font-size: 32px;
      font-weight: 600;
    }

    #black-friday-claim-{{ section.id }} .count-box small {
      font-size: 12px;
      text-transform: uppercase;
      color: #333;
    }

    #black-friday-claim-{{ section.id }} .claim-btn {
      display: inline-block;
      background: #f5c542;
      color: #000;
      font-weight: 600;
      padding: 14px 30px;
      border-radius: 30px;
      text-decoration: none;
      transition: background 0.3s ease;
    }

    #black-friday-claim-{{ section.id }} .claim-btn:hover {
      background: #ffd75e;
    }

    @media (max-width: 768px) {
      #black-friday-claim-{{ section.id }} .countdown {
        flex-wrap: wrap;
      }
    }
  </style>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var endDate = new Date("{{ section.settings.end_time }}").getTime();
      var daysEl = document.getElementById("days-{{ section.id }}");
      var hoursEl = document.getElementById("hours-{{ section.id }}");
      var minutesEl = document.getElementById("minutes-{{ section.id }}");
      var secondsEl = document.getElementById("seconds-{{ section.id }}");

      function updateCountdown() {
        var now = new Date().getTime();
        var distance = endDate - now;

        if (distance < 0) {
          clearInterval(timer);
          daysEl.textContent = "00";
          hoursEl.textContent = "00";
          minutesEl.textContent = "00";
          secondsEl.textContent = "00";
          return;
        }

        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        daysEl.textContent = days.toString().padStart(2, "0");
        hoursEl.textContent = hours.toString().padStart(2, "0");
        minutesEl.textContent = minutes.toString().padStart(2, "0");
        secondsEl.textContent = seconds.toString().padStart(2, "0");
      }

      updateCountdown();
      var timer = setInterval(updateCountdown, 1000);
    });
  </script>
</section>

{% schema %}
{
  "name": "Black Friday Claim",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#1c1e36"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Main Heading",
      "default": "Because your best self — and the people you love —"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlighted (Yellow) Text",
      "default": "can’t wait."
    },
    {
      "type": "text",
      "id": "end_time",
      "label": "Countdown End Time (e.g. 2025-12-31T23:59:59)",
      "default": "2025-12-31T23:59:59"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Claim My Black Friday Discount"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL",
      "default": "/"
    }
  ],
  "presets": [
    {
      "name": "Black Friday Claim Section"
    }
  ]
}
{% endschema %}
