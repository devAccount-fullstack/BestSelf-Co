{%- comment -%}
  Helm Key Features Section
  Displays 9 key features in a responsive grid layout
{%- endcomment -%}

{%- style -%}
  #HelmFeatures--{{ section.id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background: {{ section.settings.background_color }};
  }

  .helm-features__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .helm-features__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .helm-features__title {
    font-family: var(--font-heading-family);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 400;
    color: {{ section.settings.heading_color }};
    margin-bottom: 1rem;
    letter-spacing: 0.5px;
  }

  .helm-features__subtitle {
    font-family: var(--font-body-family);
    font-size: 1.125rem;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .helm-features__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  /* Feature Card Styles */
  .helm-feature-card {
    background: {{ section.settings.card_background }};
    border: 1px solid {{ section.settings.border_color }};
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .helm-feature-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border-color: {{ section.settings.hover_border_color }};
  }

  .helm-feature-card__icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ section.settings.icon_background }};
    border-radius: 8px;
    color: {{ section.settings.icon_color }};
  }

  .helm-feature-card__icon svg {
    width: 28px;
    height: 28px;
    stroke-width: 1.5;
  }

  .helm-feature-card__title {
    font-family: var(--font-body-family);
    font-size: 1.25rem;
    font-weight: 600;
    color: {{ section.settings.heading_color }};
    margin-bottom: 0.75rem;
    line-height: 1.3;
  }

  .helm-feature-card__description {
    font-family: var(--font-body-family);
    font-size: 0.9375rem;
    color: {{ section.settings.text_color }};
    line-height: 1.6;
    opacity: 0.85;
  }

  /* Responsive Design */
  @media screen and (min-width: 768px) and (max-width: 1023px) {
    .helm-features__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 1024px) {
    .helm-features__grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  @media screen and (max-width: 767px) {
    .helm-features__grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .helm-feature-card {
      padding: 1.5rem;
    }

    .helm-features__header {
      margin-bottom: 2.5rem;
    }

    .helm-features__title {
      font-size: 1.75rem;
    }

    .helm-features__subtitle {
      font-size: 1rem;
    }
  }

  /* Dark Mode Support */
  @media (prefers-color-scheme: dark) {
    .helm-feature-card {
      background: rgba(255, 255, 255, 0.05);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .helm-feature-card:hover {
      border-color: rgba(255, 255, 255, 0.2);
    }
  }

  /* Animation */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .helm-feature-card {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }

  .helm-feature-card:nth-child(1) { animation-delay: 0.05s; }
  .helm-feature-card:nth-child(2) { animation-delay: 0.1s; }
  .helm-feature-card:nth-child(3) { animation-delay: 0.15s; }
  .helm-feature-card:nth-child(4) { animation-delay: 0.2s; }
  .helm-feature-card:nth-child(5) { animation-delay: 0.25s; }
  .helm-feature-card:nth-child(6) { animation-delay: 0.3s; }
  .helm-feature-card:nth-child(7) { animation-delay: 0.35s; }
  .helm-feature-card:nth-child(8) { animation-delay: 0.4s; }
  .helm-feature-card:nth-child(9) { animation-delay: 0.45s; }
{%- endstyle -%}

<section id="HelmFeatures--{{ section.id }}" class="helm-features-section">
  <div class="helm-features__container">
    <!-- Section Header -->
    <div class="helm-features__header">
      <h2 class="helm-features__title">{{ section.settings.heading | default: "Helm's Key Features" }}</h2>
      <p class="helm-features__subtitle">{{ section.settings.subtitle | default: "Designed to break your bad habits, not ease them." }}</p>
    </div>

    <!-- Features Grid -->
    <div class="helm-features__grid">
      
      <!-- 1. Smart Schedules -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Smart Schedules</h3>
        <p class="helm-feature-card__description">Schedule your focus periods to start and end automatically.</p>
      </div>

      <!-- 2. Built-in Breaks -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Built-in Breaks</h3>
        <p class="helm-feature-card__description">Get up to three 5-min breaks every focus session.</p>
      </div>

      <!-- 3. Strict Mode -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Strict Mode</h3>
        <p class="helm-feature-card__description">Prevents deletion of Helm app during a focus session.</p>
      </div>

      <!-- 4. Emergency Exits -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Emergency Exits</h3>
        <p class="helm-feature-card__description">Unlock all apps without your card up to three times.</p>
      </div>

      <!-- 5. Child Mode -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Child Mode</h3>
        <p class="helm-feature-card__description">Lock your child's apps, and only the Helm card can unlock them.</p>
      </div>

      <!-- 6. Advanced Blocking -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Advanced Blocking</h3>
        <p class="helm-feature-card__description">Block adult content, in-app purchases, and app installs.</p>
      </div>

      <!-- 7. Website Blocking -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Website Blocking</h3>
        <p class="helm-feature-card__description">Block distracting websites as well as apps.</p>
      </div>

      <!-- 8. No Charging Required -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">No Charging Required</h3>
        <p class="helm-feature-card__description">Helm doesn't have a battery and doesn't require charging.</p>
      </div>

      <!-- 9. Leaderboard -->
      <div class="helm-feature-card">
        <div class="helm-feature-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h3 class="helm-feature-card__title">Leaderboard</h3>
        <p class="helm-feature-card__description">Compete with friends and others for the highest focus streak.</p>
      </div>

    </div>
  </div>
</section>

