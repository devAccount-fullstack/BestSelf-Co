<style>
  .landing-cta {
    background: linear-gradient(180deg, #131313 84.12%, #232440 16.13%);
    padding: 40px 20px;
  }

  .landing-cta__container {
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    {% comment %} max-width: 1440px; {% endcomment %}
  }

  /* Left Column */
  .landing-cta__left {
    position: relative;
  }

  .landing-cta__badge {
    width: 100%;
    max-width: 401px;
    text-align: center;
    height: 53px;
    display: inline-block;
    background: linear-gradient(135deg, #1A1A1A 0%, #6887D5 100%);
    color: white;
    padding: 12px 24px 12px 12px;
    border-radius: 0 12px 12px 0;
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 500;
    margin-bottom: 16px;
  }

  .landing-cta__units {
    width: 100%;
    max-width: 401px;
    text-align: center;
    color: white;
    font-family: 'Inter', sans-serif;
    font-size: 28px;
    font-weight: 600;
    margin-bottom: 40px;
  }

  .landing-cta__image-wrapper {
    position: relative;
    display: inline-block;
  }

  .landing-cta__product-image {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .landing-cta__price-badge {
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    align-items: center;
    gap: 0;
    pointer-events: none;
  }

  .landing-cta__starburst {
    position: relative;
    width: 170px;
    height: 170px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0;
    z-index: 2;
    filter: drop-shadow(0 18px 32px rgba(0, 0, 0, 0.25));
  }

  .landing-cta__starburst-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .landing-cta__discount-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-family: 'Libre Baskerville', serif;
    font-weight: 400;
    font-style: italic;
    color: #000000;
    text-align: center;
    line-height: 1;
  }

  .landing-cta__discount-percent {
    font-size: 50px;
    display: inline;
  }

  .landing-cta__discount-off {
    font-size: 26.74px;
    display: block;
  }

  .landing-cta__discount-symbol {
    font-size: 26.74px;
    font-family: 'Libre Baskerville', serif;
    font-weight: 400;
    font-style: italic;
    color: #000000;
    display: inline;
  }

  .landing-cta__price-box {
    position: relative;
    width: 238.64px;
    height: 85.81px;
    margin-left: -75.705px;
    padding: 18px 32px 18px 96px;
    border-radius: 13px;
    background: linear-gradient(110deg, #ffe2a1 0%, #fff3e6 100%);
    box-shadow: 0 16px 36px rgba(0, 0, 0, 0.22);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    gap: 6px;
    z-index: 1;
  }

  .landing-cta__sale-price {
    font-family: 'Inter', sans-serif;
    font-size: 28.21px;
    font-weight: 700;
    color: #000000;
    line-height: 1.1;
  }

  .landing-cta__original-price {
    font-family: 'Inter', sans-serif;
    font-size: 14.11px;
    font-weight: 400;
    color: #000000;
    display: inline;
    min-width: 150px;
  }

  .landing-cta__original-price-label {
    font-weight: 400;
  }

  .landing-cta__original-price-amount {
    font-weight: 700;
    text-decoration: line-through;
  }

  /* Right Column */
  .landing-cta__right {
    color: white;
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .landing-cta__reviews {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .landing-cta__stars {
    display: flex;
    gap: 4px;
  }

  .landing-cta__star {
    width: 18px;
    height: 18px;
  }

  .landing-cta__star--filled {
    color: #FAC848;
  }

  .landing-cta__star--empty {
    color: white;
  }

  .landing-cta__reviews-text {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    font-weight: 400;
    color: white;
  }

  .landing-cta__promo {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 700;
    letter-spacing: 0.01em;
    color: white;
  }

  .landing-cta__headline {
    font-family: 'Libre Baskerville', serif;
    font-size: 42px;
    font-weight: 400;
    font-style: italic;
    line-height: 1.2;
    color: #FAC848;
  }

  .landing-cta__description {
    font-family: 'Inter', sans-serif;
    font-size: 20px;
    font-weight: 500;
    line-height: 1.4;
    color: white;
  }

  .landing-cta__features {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin-top: 8px;
  }

  .landing-cta__features-left,
  .landing-cta__features-right {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .landing-cta__feature {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .landing-cta__feature-icon {
    width: 24px;
    height: 24px;
    color: white;
  }

  .landing-cta__feature-text {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 500;
    color: white;
  }

  .landing-cta__cta-button {
    width: 475px;
    height: 64px;
    max-width: 100%;
    border-radius: 108px;
    background: transparent;
    border: 2px solid white;
    font-family: 'Inter', sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: white;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .landing-cta__cta-button:hover {
    opacity: 0.9;
    background: white;
    color: #000000;
  }

  .landing-cta__gift {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .landing-cta__gift-icon {
    width: 24px;
    height: 24px;
    color: #FAC848;
  }

  .landing-cta__gift-text {
    font-family: 'Inter', sans-serif;
    font-size: 18px;
    font-weight: 600;
    font-style: italic;
    color: white;
  }

  /* Mobile Responsive */
  @media (max-width: 1023px) {
    .landing-cta__price-badge {
      top: 68%;
    }
    .landing-cta__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .landing-cta__units {
      font-size: 24px;
    }

    .landing-cta__starburst {
      width: 120px;
      height: 120px;
    }

    .landing-cta__discount-percent {
      font-size: 40px;
    }

    .landing-cta__discount-off {
      font-size: 21px;
    }

    .landing-cta__discount-symbol {
      font-size: 21px;
    }

    .landing-cta__price-box {
      width: 210px;
      height: 72px;
      margin-left: -58px;
      padding: 14px 24px 14px 72px;
    }

    .landing-cta__sale-price {
      font-size: 24px;
    }

    .landing-cta__original-price {
      font-size: 12px;
    }

    /* Right column mobile adjustments */
    .landing-cta__headline {
      font-size: 28px;
    }

    .landing-cta__description {
      font-size: 16px;
    }

    .landing-cta__cta-button {
      width: 100%;
      height: 56px;
      font-size: 18px;
    }
  }
</style>

<section class="landing-cta">
  <div class="landing-cta__container">
    <!-- Left Column -->
    <div class="landing-cta__left">
      {% if section.settings.badge_text != blank %}
        <div class="landing-cta__badge">
          {{ section.settings.badge_text }}
        </div>
      {% endif %}

      {% if section.settings.units_text != blank %}
        <div class="landing-cta__units">
          {{ section.settings.units_text }}
        </div>
      {% endif %}

      <div class="landing-cta__image-wrapper">
        {% if section.settings.product_image != blank %}
          <img
            src="{{ section.settings.product_image | image_url: width: 600 }}"
            alt="{{ section.settings.product_image.alt | escape }}"
            class="landing-cta__product-image"
            width="645"
            height="645"
            loading="lazy"
          >
        {% else %}
          <div style="width: 400px; height: 400px; background: #333; border-radius: 50%;"></div>
        {% endif %}

        <div class="landing-cta__price-badge">
          <!-- 12-Point Starburst -->
          <div class="landing-cta__starburst">
            {% if section.settings.starburst_image != blank %}
              <img
                src="{{ section.settings.starburst_image | image_url: width: 170 }}"
                alt="Starburst"
                class="landing-cta__starburst-image"
                width="170"
                height="170"
                loading="lazy"
              >
            {% endif %}
            <div class="landing-cta__discount-text">
              <span class="landing-cta__discount-percent">{{ section.settings.discount_percent | split: '%' | first }}</span><span class="landing-cta__discount-symbol">%</span><br>
              <span class="landing-cta__discount-off">{{ section.settings.discount_off }}</span>
            </div>
          </div>

          <!-- Price Box -->
          <div class="landing-cta__price-box">
            <div class="landing-cta__sale-price">
              {{ section.settings.sale_price }}
            </div>
            <div class="landing-cta__original-price">
              <span class="landing-cta__original-price-label">{{ section.settings.original_price_label }}</span>
              <span class="landing-cta__original-price-amount">{{ section.settings.original_price }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div class="landing-cta__right">
      <!-- Reviews -->
      {% if section.settings.star_rating > 0 %}
        <div class="landing-cta__reviews">
          <div class="landing-cta__stars">
            {% for i in (1..5) %}
              {% if i <= section.settings.star_rating %}
                <svg aria-hidden="true" focusable="false" role="presentation" class="landing-cta__star landing-cta__star--filled" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              {% else %}
                <svg aria-hidden="true" focusable="false" role="presentation" class="landing-cta__star landing-cta__star--empty" viewBox="0 0 20 20" fill="none" stroke="currentColor">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              {% endif %}
            {% endfor %}
          </div>
          <span class="landing-cta__reviews-text">{{ section.settings.reviews_text }}</span>
        </div>
      {% endif %}

      <!-- Promo Text -->
      {% if section.settings.promo_text != blank %}
        <div class="landing-cta__promo">{{ section.settings.promo_text }}</div>
      {% endif %}

      <!-- Headline -->
      {% if section.settings.headline != blank %}
        <h1 class="landing-cta__headline">{{ section.settings.headline }}</h1>
      {% endif %}

      <!-- Description -->
      {% if section.settings.description != blank %}
        <p class="landing-cta__description">{{ section.settings.description }}</p>
      {% endif %}

      <!-- Features -->
      <div class="landing-cta__features">
        <div class="landing-cta__features-left">
          {% if section.settings.feature_1 != blank %}
            <div class="landing-cta__feature">
              <svg class="landing-cta__feature-icon" width="24" height="24" viewBox="0 0 18 22" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 21C9 21 17 17 17 11V4L9 1L1 4V11C1 17 9 21 9 21Z" stroke="#FAC848" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span class="landing-cta__feature-text">{{ section.settings.feature_1 }}</span>
            </div>
          {% endif %}

          {% if section.settings.feature_2 != blank %}
            <div class="landing-cta__feature">
              <svg class="landing-cta__feature-icon" width="24" height="24" viewBox="0 0 24 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M16 14V1H1V14H16ZM16 14H23V9L20 6H16V14ZM8 16.5C8 17.8807 6.88071 19 5.5 19C4.11929 19 3 17.8807 3 16.5C3 15.1193 4.11929 14 5.5 14C6.88071 14 8 15.1193 8 16.5ZM21 16.5C21 17.8807 19.8807 19 18.5 19C17.1193 19 16 17.8807 16 16.5C16 15.1193 17.1193 14 18.5 14C19.8807 14 21 15.1193 21 16.5Z" stroke="#FAC848" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span class="landing-cta__feature-text">{{ section.settings.feature_2 }}</span>
            </div>
          {% endif %}
        </div>

        <div class="landing-cta__features-right">
          {% if section.settings.feature_3 != blank %}
            <div class="landing-cta__feature">
              <svg class="landing-cta__feature-icon" width="24" height="24" viewBox="0 0 20 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M15 1L19 5M19 5L15 9M19 5H5C3.93913 5 2.92172 5.42143 2.17157 6.17157C1.42143 6.92172 1 7.93913 1 9V11M5 23L1 19M1 19L5 15M1 19H15C16.0609 19 17.0783 18.5786 17.8284 17.8284C18.5786 17.0783 19 16.0609 19 15V13" stroke="#FAC848" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span class="landing-cta__feature-text">{{ section.settings.feature_3 }}</span>
            </div>
          {% endif %}
        </div>
      </div>

      <!-- CTA Button -->
      {% if section.settings.cta_text != blank %}
        <button class="landing-cta__cta-button">
          {{ section.settings.cta_text }}
        </button>
      {% endif %}

      <!-- Gift Text -->
      {% if section.settings.gift_text != blank %}
        <div class="landing-cta__gift">
          <svg class="landing-cta__gift-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
          </svg>
          <span class="landing-cta__gift-text">{{ section.settings.gift_text }}</span>
        </div>
      {% endif %}
    </div>
  </div>
</section>

