<section
  id="black-friday-icon-text-{{ section.id }}"
  class="black-friday-icon-text"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="bf-icon-text-container">
    {% if section.settings.icon != blank %}
      <div class="bf-icon-wrapper">
        <img
          src="{{ section.settings.icon | image_url }}"
          alt="Icon"
          class="bf-icon"
          width="200"
          height="200"
        >
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="bf-heading" style="color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <p class="bf-subheading" style="color: {{ section.settings.subheading_color }};">
        {{ section.settings.subheading }}
      </p>
    {% endif %}

    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a
        href="{{ section.settings.button_link }}"
        class="bf-button"
        style="background-color: {{ section.settings.button_bg }}; color: {{ section.settings.button_text_color }};"
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <style>
    #black-friday-icon-text-{{ section.id }} {
      padding: 60px 20px;
      text-align: center;
      font-family: "Inter", sans-serif;
    }

    .bf-icon-text-container {
      max-width: 800px;
      margin: 0 auto;
    }

    .bf-icon-wrapper {
      background: #2D3C61;
      padding: 10px 20px;
      width: fit-content;
      border-radius: 17px;
      margin: 0 auto 20px;
    }

    .bf-icon {
      width: 60px;
      height: auto;
      display: inline-block;
    }

    .bf-heading {
      font-family: "Libre Baskerville", serif;
      font-size: 1.8rem;
      font-weight: 700;
      margin-bottom: 10px;
    }

    .bf-subheading {
      font-family: "Libre Baskerville", serif;
      font-size: 1.3rem;
      font-style: italic;
      font-weight: 400;
      margin-bottom: 30px;
    }

    .bf-button {
      display: inline-block;
      padding: 14px 32px;
      border-radius: 50px;
      text-decoration: none;
      font-weight: 600;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    .bf-button:hover {
      background-color: {{ section.settings.button_hover_bg }};
      color: {{ section.settings.button_hover_text }};
      transform: translateY(-3px);
    }

    /* Responsive */
    @media (max-width: 768px) {
      #black-friday-icon-text-{{ section.id }} {
        padding: 60px 20px;
      }

      .bf-heading {
        font-size: 1.5rem;
      }

      .bf-subheading {
        font-size: 1.1rem;
      }

      .bf-button {
        padding: 12px 28px;
        font-size: 0.95rem;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Black Friday Icon + Text",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#111111"
    },
    {
      "type": "image_picker",
      "id": "icon",
      "label": "Icon image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Thank you for being part of the BestSelf journey."
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading (italic text)"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#facc15"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop My Black Friday Deal"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button background color",
      "default": "#facc15"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "button_hover_bg",
      "label": "Button hover background color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_text",
      "label": "Button hover text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Black Friday Icon + Text",
      "category": "Black Friday"
    }
  ]
}
{% endschema %}
