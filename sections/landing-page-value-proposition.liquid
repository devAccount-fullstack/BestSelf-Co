<style>
  .value-proposition {
    position: relative;
    width: 100%;
    min-height: 900px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 20px;
    overflow: hidden;
    background: rgba(0, 0, 0, 0.79);
    box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
  }

  .value-proposition__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  .value-proposition__content {
    position: relative;
    z-index: 2;
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
  }

  .value-proposition__heading-wrapper {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .value-proposition__heading-primary {
    font-family: 'Libre Baskerville', serif;
    font-size: 56px;
    font-weight: 700;
    line-height: 1.2;
    color: #FFFFFF;
    margin: 0;
  }

  .value-proposition__heading-secondary {
    font-family: 'Libre Baskerville', serif;
    font-size: 56px;
    font-weight: 400;
    font-style: italic;
    line-height: 1.2;
    color: #FAC848;
    margin: 0;
  }

  .value-proposition__description {
    font-family: 'Libre Baskerville', serif;
    font-size: 24px;
    font-weight: 400;
    line-height: 1.4;
    color: #FFFFFF;
    max-width: 800px;
    margin: 0;
  }

  .value-proposition__stats {
    display: grid;
    grid-template-columns: 1fr auto 1fr auto 1fr;
    gap: 40px;
    align-items: center;
    margin: 20px 0;
  }

  .value-proposition__stat {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
  }

  .value-proposition__stat-number {
    font-family: 'Libre Baskerville', serif;
    font-size: 42px;
    font-weight: 700;
    line-height: 1.2;
    color: #FAC848;
    margin: 0;
  }

  .value-proposition__stat-label {
    font-family: 'Libre Baskerville', serif;
    font-size: 20px;
    font-weight: 700;
    line-height: 1.2;
    color: #FFFFFF;
    margin: 0;
    max-width: 200px;
  }

  .value-proposition__divider {
    width: 1px;
    height: 100px;
    background: rgba(255, 255, 255, 0.3);
  }

  .value-proposition__testimonial {
    position: relative;
    width: 836px;
    max-width: 100%;
    min-height: 372px;
    border-radius: 14px;
    padding: 48px;
    margin-top: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 24px;
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.3626) -37.53%, rgba(255, 255, 255, 0) 100%);
    backdrop-filter: blur(0px);
    box-shadow: 0px -48px 32.3px 0px #00000014;
  }

  .value-proposition__quote-icon {
    width: 48.66px;
    height: 36px;
    margin-bottom: 8px;
  }

  .value-proposition__quote-text {
    font-family: 'Libre Baskerville', serif;
    font-size: 36px;
    font-weight: 400;
    font-style: italic;
    line-height: 1.4;
    color: #FFFFFF;
    text-align: center;
    margin: 0;
  }

  .value-proposition__quote-author {
    font-family: 'Libre Baskerville', serif;
    font-size: 20px;
    font-weight: 400;
    line-height: 1.2;
    color: #FFFFFF;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 1023px) {
    .value-proposition {
      min-height: auto;
      padding: 60px 20px;
    }

    .value-proposition__heading-primary,
    .value-proposition__heading-secondary {
      font-size: 36px;
    }

    .value-proposition__description {
      font-size: 18px;
    }

    .value-proposition__stats {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .value-proposition__divider {
      display: none;
    }

    .value-proposition__stat-number {
      font-size: 32px;
    }

    .value-proposition__stat-label {
      font-size: 16px;
    }

    .value-proposition__testimonial {
      width: 100%;
      min-height: auto;
      padding: 32px 24px;
    }

    .value-proposition__quote-icon {
      width: 36px;
      height: 27px;
    }

    .value-proposition__quote-text {
      font-size: 24px;
    }

    .value-proposition__quote-author {
      font-size: 16px;
    }
  }

  @media (max-width: 767px) {
    .value-proposition__heading-primary,
    .value-proposition__heading-secondary {
      font-size: 28px;
    }

    .value-proposition__description {
      font-size: 16px;
    }

    .value-proposition__stat-number {
      font-size: 28px;
    }

    .value-proposition__stat-label {
      font-size: 14px;
    }

    .value-proposition__quote-text {
      font-size: 20px;
    }
  }
</style>

<section class="value-proposition">
  {% if section.settings.background_image != blank %}
    <img
      src="{{ section.settings.background_image | image_url: width: 1920 }}"
      alt="{{ section.settings.background_image.alt | escape }}"
      width="{{ section.settings.background_image.width }}"
      height="{{ section.settings.background_image.height }}"
      class="value-proposition__background"
      loading="lazy"
    >
  {% else %}
    <div class="value-proposition__background" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);"></div>
  {% endif %}

  <div class="value-proposition__content">
    <!-- Headings -->
    <div class="value-proposition__heading-wrapper">
      {% if section.settings.heading_primary != blank %}
        <h2 class="value-proposition__heading-primary">{{ section.settings.heading_primary }}</h2>
      {% endif %}
      {% if section.settings.heading_secondary != blank %}
        <h2 class="value-proposition__heading-secondary">{{ section.settings.heading_secondary }}</h2>
      {% endif %}
    </div>

    <!-- Description -->
    {% if section.settings.description != blank %}
      <p class="value-proposition__description">{{ section.settings.description }}</p>
    {% endif %}

    <!-- Stats -->
    {% if section.settings.show_stats %}
      <div class="value-proposition__stats">
        <div class="value-proposition__stat">
          <div class="value-proposition__stat-number">{{ section.settings.stat_1_number }}</div>
          <div class="value-proposition__stat-label">{{ section.settings.stat_1_label }}</div>
        </div>

        <div class="value-proposition__divider"></div>

        <div class="value-proposition__stat">
          <div class="value-proposition__stat-number">{{ section.settings.stat_2_number }}</div>
          <div class="value-proposition__stat-label">{{ section.settings.stat_2_label }}</div>
        </div>

        <div class="value-proposition__divider"></div>

        <div class="value-proposition__stat">
          <div class="value-proposition__stat-number">{{ section.settings.stat_3_number }}</div>
          <div class="value-proposition__stat-label">{{ section.settings.stat_3_label }}</div>
        </div>
      </div>
    {% endif %}

    <!-- Testimonial -->
    <div class="value-proposition__testimonial">
      <svg class="value-proposition__quote-icon" width="49" height="36" viewBox="0 0 49 36" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M11.3535 0C17.6283 0 22.7119 5.08478 22.7119 11.3574C22.7118 16.5226 19.6265 26.6669 11.7461 35.2861C11.1592 35.9008 10.2504 36.1652 9.38672 35.8936C8.1695 35.5151 7.49066 34.2194 7.87109 33.0029C11.2983 26.9312 11.3535 22.7119 11.3535 22.7119C5.08316 22.7119 0.000114911 17.6278 0 11.3574C0 5.0848 5.08309 4.45425e-05 11.3535 0ZM37.2979 0C43.5727 0 48.6562 5.08478 48.6562 11.3574C48.6561 16.5227 45.5709 26.6669 37.6904 35.2861C37.1036 35.9008 36.1947 36.1652 35.3311 35.8936C34.1139 35.515 33.4359 34.2194 33.8164 33.0029C37.2436 26.9312 37.2979 22.7119 37.2979 22.7119C31.0276 22.7118 25.9445 17.6277 25.9443 11.3574C25.9443 5.08497 31.0275 0.000159791 37.2979 0Z" fill="#FAC848"/>
      </svg>

      {% if section.settings.quote_text != blank %}
        <p class="value-proposition__quote-text">{{ section.settings.quote_text }}</p>
      {% endif %}

      {% if section.settings.quote_author != blank %}
        <p class="value-proposition__quote-author">{{ section.settings.quote_author }}</p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Landing Page Proposition",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Headings"
    },
    {
      "type": "text",
      "id": "heading_primary",
      "label": "Primary Heading",
      "default": "You Know the Problem."
    },
    {
      "type": "text",
      "id": "heading_secondary",
      "label": "Secondary Heading (Italic)",
      "default": "Helm Breaks the Cycle."
    },
    {
      "type": "header",
      "content": "Description"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Apps failed. Willpower's gone. You're not lazy— your phone is designed to hijack your brain."
    },
    {
      "type": "header",
      "content": "Statistics"
    },
    {
      "type": "checkbox",
      "id": "show_stats",
      "label": "Show Statistics",
      "default": true
    },
    {
      "type": "text",
      "id": "stat_1_number",
      "label": "Stat 1 Number",
      "default": "$15k"
    },
    {
      "type": "text",
      "id": "stat_1_label",
      "label": "Stat 1 Label",
      "default": "Lost Productivity"
    },
    {
      "type": "text",
      "id": "stat_2_number",
      "label": "Stat 2 Number",
      "default": "156"
    },
    {
      "type": "text",
      "id": "stat_2_label",
      "label": "Stat 2 Label",
      "default": "Phone Pickups Per Day"
    },
    {
      "type": "text",
      "id": "stat_3_number",
      "label": "Stat 3 Number",
      "default": "38"
    },
    {
      "type": "text",
      "id": "stat_3_label",
      "label": "Stat 3 Label",
      "default": "Days Lost Annually"
    },
    {
      "type": "header",
      "content": "Testimonial"
    },
    {
      "type": "textarea",
      "id": "quote_text",
      "label": "Quote Text",
      "default": "Every app blocker failed me. Helm is the first thing that actually made me stop reaching for my phone"
    },
    {
      "type": "text",
      "id": "quote_author",
      "label": "Quote Author",
      "default": "— Anonymous"
    }
  ],
  "presets": [
    {
      "name": "Landing Page Value Proposition"
    }
  ]
}
{% endschema %}