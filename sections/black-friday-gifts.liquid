<section id="black-friday-gifts">
  <div class="container">
    <!-- Heading -->
    <h2>{{ section.settings.heading }}</h2>
    <p class="section-subtitle">{{ section.settings.subtitle }}</p>

    <!-- Shop by Price Block -->
    <h3>{{ section.settings.price_title }}</h3>
    <div class="gifts-grid">
      {% for block in section.blocks %}
        {% if block.type == 'price_block' %}
          <div class="gift-card">
            <img src="{{ block.settings.icon | img_url: 'medium' }}" width="auto" height="auto" alt="">
            <h3>{{ block.settings.title }}</h3>
            <h3>{{ block.settings.price }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <a class="bf-button" href="{{ section.settings.button_link1 }}">{{ section.settings.button_text1 }}</a>

    <!-- Shop by Personality -->
    <h3 style="margin-top:50px;">{{ section.settings.personality_title }}</h3>
    <div class="gifts-grid">
      {% for block in section.blocks %}
        {% if block.type == 'personality_block' %}
          <div class="gift-card">
            <img src="{{ block.settings.icon | img_url: 'medium' }}" width="auto" height="auto" alt="">
            <h3>{{ block.settings.title }}</h3>
            <p>{{ block.settings.text }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <a class="bf-button" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
  </div>
</section>

{% schema %}
{
  "name": "Black Gifts Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Find the Perfect Gift for Every Personality"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Give gifts that inspire clarity, connection, and growth."
    },
    { "type": "color", "id": "bg_color", "label": "Background Color", "default": "#081226" },
    { "type": "color", "id": "heading_color", "label": "Heading Color", "default": "#ffffff" },
    { "type": "color", "id": "subtitle_color", "label": "Subtitle Color", "default": "#d9d9d9" },
    { "type": "range", "id": "heading_size", "label": "Heading Size", "min": 20, "max": 60, "default": 32 },

    { "type": "text", "id": "price_title", "label": "Shop by Price Title", "default": "Shop by Price" },
    {
      "type": "text",
      "id": "personality_title",
      "label": "Shop by Personality Title",
      "default": "Shop by Personality / Relationship Type"
    },
    { "type": "text", "id": "button_text1", "label": "Button Text Price", "default": "Shop Gift by Budgets" },
    { "type": "url", "id": "button_link1", "label": "Button Link Price" },

    { "type": "text", "id": "button_text", "label": "Button Text", "default": "Find the Perfect Gift" },
    { "type": "url", "id": "button_link", "label": "Button Link" },
    { "type": "color", "id": "button_bg", "label": "Button Background", "default": "#f5d27a" },
    { "type": "color", "id": "button_color", "label": "Button Text Color", "default": "#000" }
  ],

  "blocks": [
    {
      "type": "price_block",
      "name": "Price Block",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Icon Image" },
        { "type": "text", "id": "price", "label": "Price" },
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "textarea", "id": "text", "label": "Description" }
      ]
    },
    {
      "type": "personality_block",
      "name": "Personality Block",
      "settings": [
        { "type": "image_picker", "id": "icon", "label": "Icon Image" },
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "textarea", "id": "text", "label": "Description" }
      ]
    }
  ],

  "presets": [{ "name": "Black Gifts Section" }]
}
{% endschema %}

<style>
    #black-friday-gifts {
      padding: 60px 20px;
      background: {{ section.settings.bg_color }};
      color: #fff;
      font-family: inherit;
    }
    #black-friday-gifts .container {
      max-width: 1200px;
      margin: 0 auto;
      text-align: center;
    }
    #black-friday-gifts h2 {
      font-size: {{ section.settings.heading_size }}px;
      color: {{ section.settings.heading_color }};
      margin-bottom: 10px;
      font-weight: 700;
    }
    #black-friday-gifts p.section-subtitle {
      color: {{ section.settings.subtitle_color }};
      max-width: 600px;
      margin: 0 auto 40px auto;
      font-size: 16px;
      line-height: 1.5;
    }

    /* Grid */
    .gifts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
      gap: 20px;
      margin-top: 30px;
    }

  .gift-card {
    background: #0e1a2b;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 25px;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
    .gift-card img {
      max-width: 70px;
      margin-bottom: 15px;
    }
    .gift-card h3 {
      font-size: 20px;
      margin-bottom: 8px;
    }
    .gift-card p {
      font-size: 15px;
      opacity: 0.8;
    }

    /* Button */
    .bf-button {
      display: inline-block;
      margin-top: 20px;
      background: {{ section.settings.button_bg }};
      color: {{ section.settings.button_color }};
      padding: 12px 24px;
      border-radius: 6px;
      font-weight: 600;
      text-decoration: none;
    }
</style>
