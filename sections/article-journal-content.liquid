{%- comment -%}
  Article Journal Content Section
  Includes: Main article content, table of contents, social sharing
{%- endcomment -%}

{{ 'blog-typography.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign content_width_class = 'wrapper--narrow'
  if section.settings.content_width == 'full'
    assign content_width_class = 'wrapper--full'
  elsif section.settings.content_width == 'wide'
    assign content_width_class = 'wrapper'
  endif
-%}

{%- style -%}
  #ArticleContent--{{ section.id }} {
    --PT: 60px;
    --PB: 60px;
  }
  
  .article-content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    padding-top: var(--PT);
    padding-bottom: var(--PB);
  }
  
  @media (min-width: 990px) {
    .article-content-wrapper--with-toc {
      grid-template-columns: 200px 1fr;
    }
    
    .article-content-wrapper--with-toc.toc-right {
      grid-template-columns: 1fr 200px;
    }
  }
  
  .article-toc {
    position: sticky;
    top: 120px;
    height: fit-content;
    max-height: calc(100vh - 140px);
    overflow-y: auto;
  }
  
  .article-toc__title {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
    color: var(--ink);
  }
  
  .article-toc__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .article-toc__item {
    margin-bottom: 0.5rem;
  }
  
  .article-toc__link {
    display: block;
    padding: 0.5rem 0;
    color: var(--ash);
    text-decoration: none;
    font-size: 0.875rem;
    line-height: 1.4;
    border-left: 2px solid transparent;
    padding-left: 1rem;
    transition: all 0.2s ease;
  }
  
  .article-toc__link:hover {
    color: var(--jet);
    border-left-color: var(--ash);
  }
  
  .article-toc__link.is-active {
    color: var(--jet);
    border-left-color: var(--pop);
    font-weight: 500;
  }
  
  /* Mobile TOC Dropdown */
  .article-toc-mobile {
    display: none;
    position: sticky;
    top: 60px;
    background: white;
    z-index: 100;
    margin-bottom: 2rem;
    border: 1px solid var(--ash);
    border-radius: 4px;
  }
  
  @media (max-width: 989px) {
    .article-toc {
      display: none;
    }
    
    .article-toc-mobile {
      display: block;
    }
  }
  
  .article-toc-mobile__toggle {
    width: 100%;
    padding: 1rem;
    background: none;
    border: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-size: 0.875rem;
    font-weight: 600;
  }
  
  .article-toc-mobile__content {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease;
  }
  
  .article-toc-mobile__content.is-open {
    max-height: 400px;
    overflow-y: auto;
  }
  
  /* Article Content Styles */
  .article-content {
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--jet);
  }
  
  .article-content h2 {
    font-family: var(--font-heading);
    font-size: 2rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    scroll-margin-top: 100px;
  }
  
  .article-content h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    scroll-margin-top: 100px;
  }
  
  .article-content p {
    margin-bottom: 1.5rem;
  }
  
  .article-content img {
    max-width: 100%;
    height: auto;
    margin: 2rem 0;
    border-radius: 4px;
  }
  
  .article-content blockquote {
    margin: 2rem 0;
    padding: 1.5rem;
    border-left: 4px solid var(--pop);
    background: rgba(0, 0, 0, 0.02);
    font-style: italic;
    font-size: 1.25rem;
  }
  
  .article-content ul,
  .article-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }
  
  .article-content li {
    margin-bottom: 0.5rem;
  }
  
  /* Social Sharing */
  .article-sharing {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 2rem 0;
    border-top: 1px solid var(--ash);
    margin-top: 3rem;
  }
  
  .article-sharing__label {
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .article-sharing__buttons {
    display: flex;
    gap: 0.5rem;
  }
  
  .article-sharing__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 1px solid var(--ash);
    border-radius: 50%;
    color: var(--jet);
    text-decoration: none;
    transition: all 0.2s ease;
  }
  
  .article-sharing__button:hover {
    background: var(--jet);
    color: white;
    border-color: var(--jet);
  }
{%- endstyle -%}

<section id="ArticleContent--{{ section.id }}" class="article-journal-content">
  <div class="{{ content_width_class }}">
    
    {%- if section.settings.show_table_of_contents -%}
      <!-- Mobile Table of Contents -->
      <div class="article-toc-mobile" x-data="{ open: false }">
        <button class="article-toc-mobile__toggle" @click="open = !open">
          <span>Table of Contents</span>
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor" :class="{ 'rotate-180': open }" style="transition: transform 0.2s">
            <path d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z"/>
          </svg>
        </button>
        <div class="article-toc-mobile__content" :class="{ 'is-open': open }">
          <nav class="article-toc__list" data-toc-mobile>
            <!-- Populated by JavaScript -->
          </nav>
        </div>
      </div>
    {%- endif -%}
    
    <div class="article-content-wrapper {% if section.settings.show_table_of_contents %}article-content-wrapper--with-toc{% endif %} {% if section.settings.toc_position == 'right' %}toc-right{% endif %}">
      
      {%- if section.settings.show_table_of_contents and section.settings.toc_position == 'sidebar' -%}
        <!-- Desktop Table of Contents -->
        <aside class="article-toc" data-article-toc>
          <h3 class="article-toc__title">Table of Contents</h3>
          <nav class="article-toc__list" data-toc-desktop>
            <!-- Populated by JavaScript -->
          </nav>
        </aside>
      {%- endif -%}
      
      <!-- Main Article Content -->
      <article class="article-content" data-article-content>
        {{ article.content }}
        
        {%- if section.settings.enable_social_sharing -%}
          <div class="article-sharing">
            <span class="article-sharing__label">Share this article</span>
            <div class="article-sharing__buttons">
              <!-- Twitter/X -->
              <a href="https://twitter.com/intent/tweet?text={{ article.title | url_encode }}&url={{ shop.url }}{{ article.url }}" 
                 class="article-sharing__button" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Share on Twitter">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334 0-.14 0-.282-.006-.422A6.685 6.685 0 0 0 16 3.542a6.658 6.658 0 0 1-1.889.518 3.301 3.301 0 0 0 1.447-1.817 6.533 6.533 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.325 9.325 0 0 1-6.767-3.429 3.289 3.289 0 0 0 1.018 4.382A3.323 3.323 0 0 1 .64 6.575v.045a3.288 3.288 0 0 0 2.632 3.218 3.203 3.203 0 0 1-.865.115 3.23 3.23 0 0 1-.614-.057 3.283 3.283 0 0 0 3.067 2.277A6.588 6.588 0 0 1 .78 13.58a6.32 6.32 0 0 1-.78-.045A9.344 9.344 0 0 0 5.026 15z"/>
                </svg>
              </a>
              
              <!-- Facebook -->
              <a href="https://www.facebook.com/sharer/sharer.php?u={{ shop.url }}{{ article.url }}" 
                 class="article-sharing__button" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Share on Facebook">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M16 8.049c0-4.446-3.582-8.05-8-8.05C3.58 0-.002 3.603-.002 8.05c0 4.017 2.926 7.347 6.75 7.951v-5.625h-2.03V8.05H6.75V6.275c0-2.017 1.195-3.131 3.022-3.131.876 0 1.791.157 1.791.157v1.98h-1.009c-.993 0-1.303.621-1.303 1.258v1.51h2.218l-.354 2.326H9.25V16c3.824-.604 6.75-3.934 6.75-7.951z"/>
                </svg>
              </a>
              
              <!-- LinkedIn -->
              <a href="https://www.linkedin.com/sharing/share-offsite/?url={{ shop.url }}{{ article.url }}" 
                 class="article-sharing__button" 
                 target="_blank" 
                 rel="noopener"
                 aria-label="Share on LinkedIn">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M0 1.146C0 .513.526 0 1.175 0h13.65C15.474 0 16 .513 16 1.146v13.708c0 .633-.526 1.146-1.175 1.146H1.175C.526 16 0 15.487 0 14.854V1.146zm4.943 12.248V6.169H2.542v7.225h2.401zm-1.2-8.212c.837 0 1.358-.554 1.358-1.248-.015-.709-.52-1.248-1.342-1.248-.822 0-1.359.54-1.359 1.248 0 .694.521 1.248 1.327 1.248h.016zm4.908 8.212V9.359c0-.216.016-.432.08-.586.173-.431.568-.878 1.232-.878.869 0 1.216.662 1.216 1.634v3.865h2.401V9.25c0-2.22-1.184-3.252-2.764-3.252-1.274 0-1.845.7-2.165 1.193v.025h-.016a5.54 5.54 0 0 1 .016-.025V6.169h-2.4c.03.678 0 7.225 0 7.225h2.4z"/>
                </svg>
              </a>
              
              <!-- Copy Link -->
              <button class="article-sharing__button" 
                      data-copy-link
                      data-url="{{ shop.url }}{{ article.url }}"
                      aria-label="Copy link">
                <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                  <path d="M4.715 6.542L3.343 7.914a3 3 0 1 0 4.243 4.243l1.828-1.829A3 3 0 0 0 8.586 5.5L8 6.086a1.001 1.001 0 0 0-.154.199 2 2 0 0 1 .861 3.337L6.88 11.45a2 2 0 1 1-2.83-2.83l.793-.792a4.018 4.018 0 0 1-.128-1.287z"/>
                  <path d="M6.586 4.672A3 3 0 0 0 7.414 9.5l.775-.776a2 2 0 0 1-.896-3.346L9.12 3.55a2 2 0 0 1 2.83 2.83l-.793.792c.112.42.155.855.128 1.287l1.372-1.372a3 3 0 0 0-4.243-4.243L6.586 4.672z"/>
                </svg>
              </button>
            </div>
          </div>
        {%- endif -%}
      </article>
      
      {%- if section.settings.show_table_of_contents and section.settings.toc_position == 'right' -%}
        <!-- Desktop Table of Contents (Right) -->
        <aside class="article-toc" data-article-toc>
          <h3 class="article-toc__title">Table of Contents</h3>
          <nav class="article-toc__list" data-toc-desktop>
            <!-- Populated by JavaScript -->
          </nav>
        </aside>
      {%- endif -%}
      
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Article Journal Content",
  "class": "article-journal-content-section",
  "settings": [
    {
      "type": "header",
      "content": "Table of Contents"
    },
    {
      "type": "checkbox",
      "id": "show_table_of_contents",
      "label": "Show table of contents",
      "default": true
    },
    {
      "type": "select",
      "id": "toc_position",
      "label": "Table of contents position (desktop)",
      "options": [
        {
          "value": "sidebar",
          "label": "Left sidebar"
        },
        {
          "value": "right",
          "label": "Right sidebar"
        }
      ],
      "default": "sidebar"
    },
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow (optimal for reading)"
        },
        {
          "value": "wide",
          "label": "Wide"
        },
        {
          "value": "full",
          "label": "Full width"
        }
      ],
      "default": "narrow"
    },
    {
      "type": "checkbox",
      "id": "show_reading_time",
      "label": "Show reading time",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_social_sharing",
      "label": "Enable social sharing",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Article Journal Content"
    }
  ]
}
{% endschema %}