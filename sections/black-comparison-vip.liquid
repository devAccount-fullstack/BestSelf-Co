<section
id="black-comparison-vip-{{ section.id }}"
class="black-comparison-vip"
style="background-color: {{ section.settings.bg_color }};"
>
<div class="container">
  {% if section.settings.title != blank %}
    <h2
      class="comparison-title"
      style="color: {{ section.settings.title_color }};"
    >
      {{ section.settings.title }}
    </h2>
  {% endif %}

  <div class="comparison-table">
      <div class="comparison-table-header">
      <div class="comparison-col comparison-tier-head">Feature</div>
      <div class="comparison-col comparison-reward-head">VIP Access</div>
      <div class="comparison-col comparison-general-head">General Access</div>
      </div>
      {% for block in section.blocks %}
      <div class="comparison-rows">
          <div class="comparison-col">
              {% if block.settings.icon != blank %}
              <img
                  src="{{ block.settings.icon | img_url: '64x64' }}"
                  alt=""
                  width="64"
                  height="auto"
                  class="feature-icon"
              >
              {% endif %}
              <span
              class="feature-text"
              style="color: {{ section.settings.feature_text_color }};"
              >
              {{ block.settings.feature_text }}
              </span>
          </div>
          <div class="comparison-col">{{ block.settings.vip_text }}</div>
          <div class="comparison-col">{{ block.settings.general_text }}</div>
      </div>
      {% endfor %}
  </div>
</div>

<style>
  #black-comparison-vip-{{ section.id }} {
    font-family: 'Inter', sans-serif;
    padding: 80px 20px;
    color: #fff;
  }

  #black-comparison-vip-{{ section.id }} .container {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
  }

  /* Title */
  #black-comparison-vip-{{ section.id }} .comparison-title {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 50px;
    letter-spacing: 0.4px;
  }

  {% comment %} Table {% endcomment %}
  #black-comparison-vip-{{ section.id }} .vip-table {
    text-align: left;
    border-top: 1px solid rgba(255, 255, 255, 0.15);
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    width: 80%;
    margin: 40px auto;
  }

  #black-comparison-vip-{{ section.id }} .vip-table-header,
  #black-comparison-vip-{{ section.id }} .vip-rows {
    display: grid;
    grid-template-columns: 1.5fr .8fr .8fr;
    align-items: center;
    padding: 14px 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  #black-comparison-vip-{{ section.id }} .vip-table-header {
    font-size: 12px;
    text-transform: uppercase;
    opacity: 0.7;
    letter-spacing: 0.4px;
    font-weight: 500;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }

  #black-comparison-vip-{{ section.id }} .vip-row:last-child {
    border-bottom: none;
  }

  #black-comparison-vip-{{ section.id }} .vip-col {
    font-size: 15px;
    color: #fff;
  }

  #black-comparison-vip-{{ section.id }} .vip-col:nth-child(1) {
    font-weight: 500;
  }

  #black-comparison-vip-{{ section.id }} .vip-col:nth-child(2) {
    font-weight: 400;
    text-align: start;
  }

  #black-comparison-vip-{{ section.id }} .vip-col:nth-child(3) {
    text-align: start;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    #black-comparison-vip-{{ section.id }} .vip-table-header {
      display: none;
    }

    #black-comparison-vip-{{ section.id }} .vip-rows {
      grid-template-columns: 1fr;
      text-align: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    #black-comparison-vip-{{ section.id }} .vip-col {
      padding: 4px 0;
    }
    #black-comparison-vip-{{ section.id }} .vip-col:nth-child(2) {
      text-align: center;
    }

    #black-comparison-vip-{{ section.id }} .vip-col:nth-child(3) {
      text-align: center;
    }
  }

</style>
</section>

{% schema %}
{
"name": "Black Comparison VIP",
"settings": [
  {
    "type": "text",
    "id": "title",
    "label": "Section Title",
    "default": "VIP vs. General Access Comparison"
  },
  {
    "type": "color",
    "id": "title_color",
    "label": "Title Color",
    "default": "#e6b85c"
  },
  {
    "type": "color",
    "id": "feature_text_color",
    "label": "Feature Text Color",
    "default": "#ffffff"
  },
  {
    "type": "color",
    "id": "vip_text_color",
    "label": "VIP Text Color",
    "default": "#e6b85c"
  },
  {
    "type": "color",
    "id": "vip_border_color",
    "label": "VIP Border Color",
    "default": "#e6b85c"
  },
  {
    "type": "color",
    "id": "general_text_color",
    "label": "General Text Color",
    "default": "#b3b3b3"
  },
  {
    "type": "color",
    "id": "bg_color",
    "label": "Background Color",
    "default": "#000000"
  }
],
"blocks": [
  {
    "type": "feature_row",
    "name": "Feature Row",
    "settings": [
      {
        "type": "image_picker",
        "id": "icon",
        "label": "Feature Icon"
      },
      {
        "type": "text",
        "id": "feature_text",
        "label": "Feature Text",
        "default": "Starting Discount"
      },
      {
        "type": "text",
        "id": "vip_text",
        "label": "VIP Text",
        "default": "25%"
      },
      {
        "type": "text",
        "id": "general_text",
        "label": "General Text",
        "default": "20%"
      }
    ]
  }
],
"presets": [
  {
    "name": "Black Comparison VIP"
  }
]
}
{% endschema %}
