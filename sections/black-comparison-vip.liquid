<section
  id="black-comparison-vip-{{ section.id }}"
  class="black-comparison-vip"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="container">
    {% if section.settings.title != blank %}
      <h2
        class="comparison-title"
        style="color: {{ section.settings.title_color }};"
      >
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="comparison-table">
        <div class="comparison-table-header">
        <div class="comparison-col comparison-tier-head">Feature</div>
        <div class="comparison-col comparison-reward-head">VIP Access</div>
        <div class="comparison-col comparison-general-head">General Access</div>
        </div>
        {% for block in section.blocks %}
        <div class="comparison-rows">
            <div class="comparison-col">{{ block.settings.tier }}</div>
            <div class="comparison-col">{{ block.settings.reward }}</div>
            <div class="comparison-col">{{ block.settings.threshold }}</div>
        </div>
        {% endfor %}
    </div>
  </div>

  <style>
    #black-comparison-vip-{{ section.id }} {
      font-family: 'Inter', sans-serif;
      padding: 80px 20px;
      color: #fff;
    }

    #black-comparison-vip-{{ section.id }} .container {
      max-width: 1000px;
      margin: 0 auto;
      text-align: center;
    }

    /* Title */
    #black-comparison-vip-{{ section.id }} .comparison-title {
      font-size: 36px;
      font-weight: 700;
      margin-bottom: 50px;
      letter-spacing: 0.4px;
    }

    /* Table layout */
    #black-comparison-vip-{{ section.id }} .comparison-table {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    #black-comparison-vip-{{ section.id }} .comparison-row {
      display: grid;
      grid-template-columns: 1.5fr 0.8fr 0.8fr;
      align-items: center;
      background-color: #0f0f0f;
      border-radius: 14px;
      padding: 20px 24px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      transition: background 0.3s ease, transform 0.2s ease;
    }

    #black-comparison-vip-{{ section.id }} .comparison-row:hover {
      background-color: #1a1a1a;
      transform: translateY(-2px);
    }

    /* Feature column */
    #black-comparison-vip-{{ section.id }} .comparison-feature {
      display: flex;
      align-items: center;
      gap: 12px;
      justify-content: flex-start;
      text-align: left;
    }

    #black-comparison-vip-{{ section.id }} .feature-icon {
      width: 26px;
      height: 26px;
      object-fit: contain;
      opacity: 0.9;
    }

    #black-comparison-vip-{{ section.id }} .feature-text {
      font-size: 16px;
      font-weight: 500;
    }

    /* VIP block */
    #black-comparison-vip-{{ section.id }} .comparison-vip {
      border: 2px solid #e6b85c;
      border-radius: 10px;
      padding: 12px 0;
      font-weight: 600;
      background: rgba(230, 184, 92, 0.05);
    }

    /* General block */
    #black-comparison-vip-{{ section.id }} .comparison-general {
      font-weight: 400;
      opacity: 0.85;
    }

    /* Responsive */
    @media (max-width: 768px) {
      #black-comparison-vip-{{ section.id }} .comparison-row {
        grid-template-columns: 1fr;
        text-align: center;
        gap: 10px;
      }

      #black-comparison-vip-{{ section.id }} .comparison-feature {
        justify-content: center;
      }

      #black-comparison-vip-{{ section.id }} .comparison-vip,
      #black-comparison-vip-{{ section.id }} .comparison-general {
        width: 100%;
      }

      #black-comparison-vip-{{ section.id }} .comparison-vip {
        padding: 10px;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Black Comparison VIP",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "VIP vs. General Access Comparison"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "feature_text_color",
      "label": "Feature Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "vip_text_color",
      "label": "VIP Text Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "vip_border_color",
      "label": "VIP Border Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "general_text_color",
      "label": "General Text Color",
      "default": "#b3b3b3"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "feature_row",
      "name": "Feature Row",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text",
          "default": "Starting Discount"
        },
        {
          "type": "text",
          "id": "vip_text",
          "label": "VIP Text",
          "default": "25%"
        },
        {
          "type": "text",
          "id": "general_text",
          "label": "General Text",
          "default": "20%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Black Comparison VIP"
    }
  ]
}
{% endschema %}
