<section
  id="black-comparison-vip-{{ section.id }}"
  class="black-comparison-vip"
  style="background-color: {{ section.settings.bg_color }};"
>
  <div class="container">
    {% if section.settings.title != blank %}
      <h2
        class="comparison-title"
        style="color: {{ section.settings.title_color }};"
      >
        {{ section.settings.title }}
      </h2>
    {% endif %}

    <div class="comparison-table">
      {% for block in section.blocks %}
        <div class="comparison-row">
          <div class="comparison-feature">
            {% if block.settings.icon != blank %}
              <img src="{{ block.settings.icon | img_url: '64x64' }}" alt="" width="64px" height="auto" class="feature-icon">
            {% endif %}
            <span class="feature-text" style="color: {{ section.settings.feature_text_color }};">
              {{ block.settings.feature_text }}
            </span>
          </div>
          <div class="comparison-vip" style="border-color: {{ section.settings.vip_border_color }}; color: {{ section.settings.vip_text_color }};">
            {{ block.settings.vip_text }}
          </div>
          <div class="comparison-general" style="color: {{ section.settings.general_text_color }};">
            {{ block.settings.general_text }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <style>
    #black-comparison-vip-{{ section.id }} {
      font-family: 'Inter', sans-serif;
      padding: 60px 20px;
      color: #fff;
    }

    #black-comparison-vip-{{ section.id }} .container {
      max-width: 1000px;
      margin: 0 auto;
      text-align: center;
    }

    #black-comparison-vip-{{ section.id }} .comparison-title {
      font-size: 32px;
      font-weight: 700;
      margin-bottom: 40px;
    }

    /* Table */
    #black-comparison-vip-{{ section.id }} .comparison-table {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    #black-comparison-vip-{{ section.id }} .comparison-row {
      display: grid;
      grid-template-columns: 1.5fr 0.8fr 0.8fr;
      align-items: center;
      background-color: #111;
      border-radius: 10px;
      padding: 20px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      gap: 20px;
    }

    .comparison-feature {
      display: flex;
      align-items: center;
      gap: 10px;
      justify-content: flex-start;
    }

    .feature-icon {
      width: 24px;
      height: 24px;
      object-fit: contain;
    }

    .comparison-vip {
      border: 2px solid #e6b85c;
      border-radius: 8px;
      padding: 10px 0;
      font-weight: 600;
    }

    .comparison-general {
      font-weight: 400;
      opacity: 0.9;
    }

    /* Responsive */
    @media (max-width: 768px) {
      #black-comparison-vip-{{ section.id }} .comparison-row {
        grid-template-columns: 1fr;
        text-align: center;
      }

      .comparison-feature {
        justify-content: center;
      }

      .comparison-vip, .comparison-general {
        width: 100%;
      }
    }
  </style>
</section>

{% schema %}
{
  "name": "Black Comparison VIP",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "VIP vs. General Access Comparison"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "feature_text_color",
      "label": "Feature Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "vip_text_color",
      "label": "VIP Text Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "vip_border_color",
      "label": "VIP Border Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "general_text_color",
      "label": "General Text Color",
      "default": "#b3b3b3"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "feature_row",
      "name": "Feature Row",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text",
          "default": "Starting Discount"
        },
        {
          "type": "text",
          "id": "vip_text",
          "label": "VIP Text",
          "default": "25%"
        },
        {
          "type": "text",
          "id": "general_text",
          "label": "General Text",
          "default": "20%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Black Comparison VIP"
    }
  ]
}
{% endschema %}
