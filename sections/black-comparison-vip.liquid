<section id="black-comparison-vip-{{ section.id }}" class="black-comparison-vip" style="background-color: {{ section.settings.bg_color }};">
  <div class="container">
    {% if section.settings.title != blank %}
      <h2 class="comparison-title" style="color: {{ section.settings.title_color }};">
        {{ section.settings.title }}
      </h2>
    {% endif %}
    {% if section.settings.subtitle != blank %}
      <p class="comparison-subtitle" style="color: {{ section.settings.subtitle_color }};">
        {{ section.settings.subtitle }}
      </p>
    {% endif %}

    <div class="comparison-table">
      {% for block in section.blocks %}
        <div class="comparison-row">
          <div class="feature">
            {% if block.settings.icon != blank %}
              <img
                src="{{ block.settings.icon | image_url: width: 100 }}"
                alt="banner-image"
                width="100px"
                height="auto"
                class="feature-icon"
              >
            {% endif %}
            <span class="feature-text" style="color: {{ section.settings.feature_color }};">
              {{ block.settings.feature_text }}
            </span>
          </div>

          <div class="vip-access">
            <span class="vip-text" style="color: {{ section.settings.vip_color }};">
              {{ block.settings.vip_text }}
            </span>
          </div>

          <div class="general-access">
            <span class="general-text" style="color: {{ section.settings.general_color }};">
              {{ block.settings.general_text }}
            </span>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Black Comparison VIP",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#e6b85c"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "feature_color",
      "label": "Feature Text Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "vip_color",
      "label": "VIP Text Color",
      "default": "#e6b85c"
    },
    {
      "type": "color",
      "id": "general_color",
      "label": "General Text Color",
      "default": "#bfbfbf"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#000000"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Feature Row",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Feature Icon"
        },
        {
          "type": "text",
          "id": "feature_text",
          "label": "Feature Text",
          "default": "Exclusive Lounge Access"
        },
        {
          "type": "text",
          "id": "vip_text",
          "label": "VIP Access Text",
          "default": "Included"
        },
        {
          "type": "text",
          "id": "general_text",
          "label": "General Access Text",
          "default": "Not Included"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Black Comparison VIP",
      "category": "Black Friday"
    }
  ]
}
{% endschema %}

<style>
  #black-comparison-vip-{{ section.id }} {
    padding: 60px 20px;
    font-family: 'Inter', sans-serif;
    color: #fff;
  }

  #black-comparison-vip-{{ section.id }} .container {
    max-width: 950px;
    margin: 0 auto;
  }

  .comparison-title {
    font-size: 2rem;
    text-align: center;
    font-weight: 700;
    margin-bottom: 40px;
    letter-spacing: 0.5px;
  }

  .comparison-subtitle {
    text-align: center;
    font-size: 1.1rem;
    margin-bottom: 40px;
  }

  .comparison-table {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .comparison-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #111;
    border-radius: 10px;
    padding: 20px 25px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 12px;
    flex: 2;
    font-weight: 500;
  }

  .feature-icon {
    width: 22px;
    height: 22px;
    object-fit: contain;
    filter: brightness(0) saturate(100%) invert(81%) sepia(43%) saturate(626%) hue-rotate(7deg) brightness(95%) contrast(89%);
  }

  .feature-text {
    font-size: 1rem;
  }

  .vip-access {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .vip-text {
    display: inline-block;
    border: 1.5px solid #e6b85c;
    border-radius: 8px;
    padding: 10px 25px;
    text-align: center;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .vip-text:hover {
    background-color: rgba(230, 184, 92, 0.1);
    box-shadow: 0 0 10px rgba(230, 184, 92, 0.3);
  }

  .general-access {
    flex: 1;
    display: flex;
    justify-content: center;
    opacity: 0.8;
  }

  .general-text {
    font-weight: 400;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .comparison-row {
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
      gap: 10px;
      padding: 20px;
    }

    .feature,
    .vip-access,
    .general-access {
      width: 100%;
      justify-content: flex-start;
    }

    .vip-text {
      padding: 8px 18px;
    }
  }
</style>
