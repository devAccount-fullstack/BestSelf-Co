{% assign journal_content = product.metafields.custom.journal_content.value %}

{% if journal_content %}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
/>

{% style %}
.journal--feature-section-{{ section.id }}{
  background: {{section.settings.bg_color}};
  padding-top: {{section.settings.padding_top_desktop | append: "px"}};
  padding-bottom: {{section.settings.padding_bottom_desktop | append: "px"}};
}
.journal--feature-section-{{ section.id }} .wrapper--sm{
    max-width: 1240px;
    margin: 0 auto;
    padding-left: 25px;
    padding-right: 25px;
  }
.journal--feature-heading-{{ section.id }}{
  width: 100%;
  max-width: 630px;
  margin: 0 auto;
}
.journal--feature-heading-{{ section.id }} h2{
  font-family: var(--FONT-STACK-HEADING);
  font-size: 40px;
  line-height: 50px;
  font-weight: 700;
  text-align: center;
  margin-top: 0px;
  margin-bottom: 8px;
  color: #1A1A1A;
}
.journal--feature-heading-{{ section.id }} p{
  font-family: var(--FONT-STACK-BODY);
  font-size: 20px;
  line-height: 30px;
  font-weight: 400;
  letter-spacing: 0.5px;
  margin-top: 0;
  margin-bottom: 30px;
  text-align: center;
}

.journal--feature-swiper-{{ section.id }}:not(.active) .image-filled{
  display: none;
}
.journal--feature-swiper-{{ section.id }}.active .image-blank{
  display: none;
}
.journal--feature-slider-content-wrapper-{{ section.id }} img{
  width: 100%;
  height: auto;
}
.journal--feature-slider-content-text-{{ section.id }}{
  width: 100%;
  max-width: 512px;
  margin: 10px auto 0;
}
.journal--feature-slider-content-wrapper-{{ section.id }} h2{
  font-family: var(--FONT-STACK-HEADING);
  font-size: 26px;
  font-weight: 700;
  line-height: 1.3;
  letter-spacing: 0.96px;
  color: #1A1A1A;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
}
.journal--feature-slider-content-wrapper-{{ section.id }} p{
  font-family: var(--FONT-STACK-BODY);
  font-size: 20px;
  font-weight: 400;
  color: #454545;
  line-height: 30px;
  letter-spacing: 0.5px;
  text-align: center;
  margin: 0;
}
.jounral--feature-switcher{
  text-align: center;
  margin: 1em auto 2em;
}
.jounral--feature-switcher p{
  font-family: var(--FONT-STACK-BODY);
  font-size: 14px;
  line-height: 17px;
  margin-top: 8px;
  color: #1a1a1a;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 2px;
}
.jounral--feature-switcher .switch {
  position: relative;
  display: inline-block;
  width: 60px;
  height: 34px;
}
.jounral--feature-switcher .toggle_slider{
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #D8D8D8;
  -webkit-transition: .4s;
  transition: .4s;
  border-radius: 34px;
}
.jounral--feature-switcher .toggle_slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    -webkit-transition: .4s;
    transition: .4s;
    border-radius: 50%;
}
.jounral--feature-switcher input:checked + .toggle_slider{
  background-color: #242540;
}
.jounral--feature-switcher input:checked + .toggle_slider:before{
  -webkit-transform: translateX(26px);
  -ms-transform: translateX(26px);
  transform: translateX(26px);
}
.jounral--feature-switcher input:checked + .toggle_slider:after{
  content: 'ON';
  transform: translate(-127%, -50%);
}
.jounral--feature-switcher .toggle_slider:after{
  content: 'OFF';
  color: white;
  display: block;
  position: absolute;
  transform: translate(12%, -50%);
  top: 50%;
  left: 50%;
  font-size: 10px;
  font-family: 'Moderat';
  font-weight: 700;
}
.journal--feature-swiper-{{ section.id }} .swiper-button-prev-{{ section.id }},
.journal--feature-swiper-{{ section.id }} .swiper-button-next-{{ section.id }}{
  color: #ffffff;
  background-color: #242540;
  border: none;
  border-radius: 50%;
  height: 40px;
  width: 40px;
  cursor: pointer;
}
.journal--feature-swiper-{{ section.id }} .swiper-button-prev-{{ section.id }}::after,
.journal--feature-swiper-{{ section.id }} .swiper-button-next-{{ section.id }}::after{
  font-size: 16px;
}
.journal--feature-swiper-{{ section.id }} .swiper-button-prev-{{ section.id }}{
  left: 5%;
}
.journal--feature-swiper-{{ section.id }} .swiper-button-next-{{ section.id }}{
  right: 5%;
}
.journal--feature-swiper-{{ section.id }} .swiper-pagination-{{ section.id }}{
  position: unset;
  margin-top: 24px;
}
.journal--feature-swiper-{{ section.id }} .swiper-pagination-{{ section.id }} .swiper-pagination-bullet{
  font-size: 0;
  width: 40px;
  height: 5px;
  background-color: #cccccc;
  border-radius: 100px;
  border: 0;
  color: transparent;
  cursor: pointer;
  opacity: 1;
}
.journal--feature-swiper-{{ section.id }} .swiper-pagination-{{ section.id }} .swiper-pagination-bullet.swiper-pagination-bullet-active{
  background-color: #242540;
}
@media only screen and (max-width: 768px){
  .journal--feature-section-{{ section.id }}{
     padding-top: {{section.settings.padding_top_mobile | append: "px"}};
     padding-bottom: {{section.settings.padding_bottom_mobile | append: "px"}};
  }
  .journal--feature-section-{{ section.id }} .wrapper--sm{
    padding-left: 16px;
    padding-right: 16px;
  }
  .journal--feature-heading-{{ section.id }} h2{
    font-size: 28px;
  }
  .journal--feature-heading-{{ section.id }} p{
    font-size: 16px;
  }
  .journal--feature-slider-content-wrapper-{{ section.id }} h2{
    font-size: 24px;
  }
  .journal--feature-slider-content-wrapper-{{ section.id }} p{
    font-size: 16px;
  }
  .journal--feature-swiper-{{ section.id }} .swiper-button-prev-{{ section.id }},
  .journal--feature-swiper-{{ section.id }} .swiper-button-next-{{ section.id }}{
    display: none;
  }
  .jounral--feature-switcher p{
    font-size: 12px;
  }
  .journal--feature-heading-{{ section.id }} p,
  .jounral--feature-switcher{
    margin-bottom: 24px;
  }
  .journal--feature-slider-content-wrapper-{{ section.id }} h2{
    margin-top: 0;
    margin-bottom: 16px;
  }
  .journal--feature-slider-content-wrapper-{{ section.id }}{
    display: flex;
    flex-direction: column
  }
  .journal--feature-slider-content-image-{{ section.id }}{
    order: 2;
  }
  .journal--feature-slider-content-text-{{ section.id }}{
    order: 1;
    margin-top: 0;
    margin-bottom: 24px;
  }
  
}
{% endstyle %}

<section class="journal--feature-section journal--feature-section-{{ section.id }}">
  <div class="wrapper--sm">
    {% if section.settings.heading != blank or section.settings.content != blank %}
      <div class="journal--feature-heading-{{ section.id }}">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.content != blank %}
          {{ section.settings.content }}
        {% endif %}
      </div>
    {% endif %}
    <div class="jounral--feature-switcher">
      <p class="fill-the-page">Fill in the pages</p>
      <label class="switch">
          <input type="checkbox" id="fill-the-page-switcher">
          <span class="toggle_slider round"></span>
      </label>
    </div>
    <div class="journal--feature-slider">
      <div class="swiper journal--feature-swiper-{{ section.id }}">
 
        <div class="swiper-wrapper">
          {% for content in journal_content %}
              <div class="swiper-slide">
                <div class="journal--feature-slider-content-wrapper-{{ section.id }}">
                  <div class="journal--feature-slider-content-image-{{ section.id }}">
                    <div class="image-blank">
                      <img src="{{ content.blank_image | image_url }}" alt = "{{ content.blank_image.alt | default: shop.name }}" width="{{ content.blank_image.width }}" height="{{ content.blank_image.height }}">
                    </div>
                    <div class="image-filled">
                      <img src="{{ content.filled_image | image_url }}" alt = "{{ content.filled_image.alt | default: shop.name }}" width="{{ content.filled_image.width }}" height="{{ content.filled_image.height }}">
                    </div>
                  </div>
                  <div class="journal--feature-slider-content-text-{{ section.id }}">
                    <h2>{{ content.journal_heading }}</h2>
                    <p>{{ content.journal_text }}</p>
                  </div>
                </div>
              </div>
          {% endfor %}
        </div>

        <div class="swiper-pagination swiper-pagination-{{ section.id }}"></div>
        
        <div class="swiper-button-prev swiper-button-prev-{{ section.id }}"></div>
        <div class="swiper-button-next swiper-button-next-{{ section.id }}"></div>

      </div>
    </div>
  </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" defer></script>
<script>
  function slideShowInit(){
      const fillThePage_{{section.id | replace: "-", "_"}} = document.getElementById("fill-the-page-switcher");
      const fillThePageSwiper_{{section.id | replace: "-", "_"}} = document.querySelector(".journal--feature-swiper-{{ section.id }}");
      
      fillThePage_{{section.id | replace: "-", "_"}}.addEventListener("click", function(){
          fillThePageSwiper_{{section.id | replace: "-", "_"}}.classList.toggle("active");
      })
      const slider = new Swiper('.journal--feature-swiper-{{ section.id }}', {
        speed: 300,
        loop: true,
        navigation: {
          nextEl: '.swiper-button-next-{{section.id}}',
          prevEl: '.swiper-button-prev-{{section.id}}'
        },
        pagination: {
          el: '.swiper-pagination-{{ section.id }}',
          type: 'bullets',
          clickable:true
        },
        breakpoints: {
          320: {
          },
          768: {
          },
          1024: {
          }
        }
      });
  }
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:load', slideShowInit);
  }
  document.addEventListener("DOMContentLoaded", slideShowInit);
</script>
{% endif %}

