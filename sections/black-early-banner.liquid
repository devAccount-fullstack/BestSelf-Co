<section class="black-early-banner">
  <div class="beb-container">

    <!-- Text Block -->
    <div class="beb-text">
      {% if section.settings.subheading != blank %}
        <p class="beb-subheading">{{ section.settings.subheading }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="beb-heading">{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

    <!-- Image Block -->
    <div class="beb-image-wrapper">
      {% if section.settings.banner_image %}
        <img
          src="{{ section.settings.banner_image | image_url: width: 900 }}"
          width="100%"
          height="auto"
          alt="Black Friday Early Access Banner"
          class="beb-image"
        >
      {% endif %}
    </div>

  </div>
</section>

<style>
/* ----------- SECTION WRAPPER ------------- */
.black-early-banner {
  width: 100%;
  padding: 60px 20px;
  background: linear-gradient(to right, #121212, #0d0d0d);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* ----------- CONTAINER ------------- */
.beb-container {
  max-width: 1200px;
  width: 100%;
  text-align: center;
}

/* ----------- TEXT STYLES ------------- */
.beb-subheading {
  font-size: 22px;
  color: #ffffff;
  font-weight: 500;
  margin-bottom: 10px;
}

.beb-heading {
  font-size: 58px;
  font-weight: 600;
  color: #f2c46d;
  font-family: Georgia, serif;
  margin-bottom: 40px;
}

/* ----------- IMAGE ------------- */
.beb-image-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.beb-image {
  display: block;
  line-height: 0;
}

/* ----------- RESPONSIVE ------------- */
@media (max-width: 768px) {
  .beb-heading {
    font-size: 42px;
  }
  .beb-subheading {
    font-size: 18px;
  }
  .black-early-banner {
    padding: 40px 20px;
  }
}
</style>

{% schema %}
{
  "name": "Early Access Banner",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Black Friday 2025"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Early Access"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Early Access Banner",
      "category": "Promotional"
    }
  ]
}
{% endschema %}
