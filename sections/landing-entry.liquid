<section class="landing-entry" style="--heading-margin-bottom: {{ section.settings.heading_margin_bottom }}px;">
  <div class="container">
    {% if section.settings.eyebrow != blank %}
      <p class="landing-entry__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    
    {% if section.settings.countdown_number != blank %}
      <div class="landing-entry__countdown">
        <div class="landing-entry__countdown-number">{{ section.settings.countdown_number }}</div>
      </div>
    {% endif %}
		
    {% if section.settings.heading != blank %}
			<h2 class="landing-entry__heading">{{ section.settings.heading }}</h2>
    {% endif %}

		{% if section.settings.subheading != blank %}
			<p class="landing-entry__subheading">{{ section.settings.subheading }}</p>
		{% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="landing-entry__grid">
        {% for block in section.blocks %}
          <div class="landing-entry__item" {{ block.shopify_attributes }}>
            {% if block.settings.number != blank %}
              <div class="landing-entry__number">{{ block.settings.number }}</div>
            {% endif %}
            {% if block.settings.text != blank %}
              <p class="landing-entry__text">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
    
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <div class="landing-entry__button-wrapper" style="--button-margin-top: {{ section.settings.button_margin_top }}px;">
        <a href="{{ section.settings.button_url }}" class="landing-entry__button btn">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{{ 'giveaway-landing.css' | asset_url | stylesheet_tag }}

{% style %}
  .landing-entry__heading {
    margin-bottom: var(--heading-margin-bottom, 20px);
  }

  .landing-entry__button-wrapper {
    margin-top: var(--button-margin-top, 20px);
  }

  #shopify-section-{{ section.id }} .landing-entry {
    background-color: {{ section.settings.bg_color }};
  }

  @media (max-width: 849px) {
    .landing-entry__heading {
      margin-bottom: 18px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Landing Entry",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#2D3C61"
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "How to Enter"
    },
    {
      "type": "number",
      "id": "countdown_number",
      "label": "Countdown Number"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "3 Seconds to Entry. <i>Instant Rewards.</i>"
    },
		{
      "type": "range",
      "id": "heading_margin_bottom",
      "label": "Heading Margin Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "info": "Text below the countdown number"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Yes, I Want In!"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "range",
      "id": "button_margin_top",
      "label": "Button Margin Top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "1"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Add your description text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Landing Entry",
      "blocks": [
        {
          "type": "grid_item",
          "settings": {
            "number": "1",
            "text": "Just drop your email"
          }
        },
        {
          "type": "grid_item",
          "settings": {
            "number": "2",
            "text": "Get loyalty points instantly"
          }
        },
        {
          "type": "grid_item",
          "settings": {
            "number": "3",
            "text": "You're in the running"
          }
        }
      ]
    }
  ]
}
{% endschema %}