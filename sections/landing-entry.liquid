<section class="landing-entry" style="--heading-margin-bottom: {{ section.settings.heading_margin_bottom }}px;">
  <div class="container">
    {% if section.settings.eyebrow != blank %}
      <p class="landing-entry__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    
    {% if section.settings.countdown_number != blank %}
      <div class="landing-entry__countdown">
        <div class="landing-entry__countdown-number">{{ section.settings.countdown_number }}</div>
      </div>
    {% endif %}
		
    {% if section.settings.heading != blank %}
			<h2 class="landing-entry__heading">{{ section.settings.heading }}</h2>
    {% endif %}

		{% if section.settings.subheading != blank %}
			<p class="landing-entry__subheading">{{ section.settings.subheading }}</p>
		{% endif %}
    
    {% if section.blocks.size > 0 %}
      <div class="landing-entry__grid">
        {% for block in section.blocks %}
          <div class="landing-entry__item" {{ block.shopify_attributes }}>
            {% if block.settings.number != blank %}
              <div class="landing-entry__number">{{ block.settings.number }}</div>
            {% endif %}
            {% if block.settings.text != blank %}
              <p class="landing-entry__text">{{ block.settings.text }}</p>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
    
    {% if section.settings.button_text != blank and section.settings.button_url != blank %}
      <div class="landing-entry__button-wrapper">
        <a href="{{ section.settings.button_url }}" class="landing-entry__button landing-entry__button--{{ section.settings.button_style }} btn">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
  .landing-entry__heading {
    margin-bottom: var(--heading-margin-bottom, 20px);
  }
</style>

{% schema %}
{
  "name": "Landing Entry",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "How to Enter"
    },
    {
      "type": "number",
      "id": "countdown_number",
      "label": "Countdown Number"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "3 Seconds to Entry. <i>Instant Rewards.</i>"
    },
		{
      "type": "range",
      "id": "heading_margin_bottom",
      "label": "Heading Margin Bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "default": 20
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "info": "Text below the countdown number"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Yes, I Want In!"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "button_style",
      "label": "Button Style",
      "default": "primary",
      "options": [
        {
          "value": "primary",
          "label": "Primary (Dark background, White text)"
        },
        {
          "value": "secondary",
          "label": "Secondary (White background, Dark text)"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "grid_item",
      "name": "Grid Item",
      "limit": 3,
      "settings": [
        {
          "type": "text",
          "id": "number",
          "label": "Number",
          "default": "1"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Add your description text here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Landing Entry",
      "blocks": [
        {
          "type": "grid_item",
          "settings": {
            "number": "1",
            "text": "Just drop your email"
          }
        },
        {
          "type": "grid_item",
          "settings": {
            "number": "2",
            "text": "Get loyalty points instantly"
          }
        },
        {
          "type": "grid_item",
          "settings": {
            "number": "3",
            "text": "You're in the running"
          }
        }
      ]
    }
  ]
}
{% endschema %}