<section
    class="black-friday-banner"
    style="
        width: 100%;
        background: linear-gradient(to bottom, {{ section.settings.left_bg_color }} 0%, {{ section.settings.left_bg_color }} 70%, {{ section.settings.right_bg_color }} 70%, {{ section.settings.right_bg_color }} 100%);
    "
>
  <div class="black-friday-container">
    <div class="black-friday-content">
      <h2 class="headline">
        <span class="highlight">{{ section.settings.highlight_text }}</span>
        {{ section.settings.headline_text }}
      </h2>

      <p class="subtext">{{ section.settings.subtext }}</p>
      <a href="{{ section.settings.button_link }}" class="cta-button">
        {{ section.settings.cta_text }}
      </a>

      <div class="countdown">
        <div class="count-box"><span id="days-{{ section.id }}">00</span><small>Days</small></div>
        <div class="count-box"><span id="hours-{{ section.id }}">00</span><small>Hours</small></div>
        <div class="count-box"><span id="minutes-{{ section.id }}">00</span><small>Minutes</small></div>
        <div class="count-box"><span id="seconds-{{ section.id }}">00</span><small>Seconds</small></div>
      </div>

      <p class="note">{{ section.settings.loyalty_message }}</p>
    </div>

    <div class="black-friday-image">
      <div class="discount-badge">{{ section.settings.discount_percent }} off</div>

      {% if section.settings.product_image != blank %}
        <img src="{{ section.settings.product_image | image_url: width: 600, height: 600, crop: 'center' }}" alt="Product" width="600" height="600" />
      {% endif %}

      {% comment %} <div class="price-tag">
        <span class="discounted">{{ section.settings.discounted_price }}</span>
        <span class="original">{{ section.settings.original_price }}</span>
        <small>{{ section.settings.stock_message }}</small>
      </div> {% endcomment %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Black Friday Banner",
  "settings": [
    {
      "type": "color",
      "id": "left_bg_color",
      "label": "Left Background Color",
      "default": "#0c0b1a"
    },
    {
      "type": "color",
      "id": "right_bg_color",
      "label": "Right Background Color",
      "default": "#111b36"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlighted Text",
      "default": "Black Friday:"
    },
    {
      "type": "text",
      "id": "headline_text",
      "label": "Headline Text",
      "default": "Up to 35% OFF + Free Gifts — Tools That Actually Stick."
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "End your phone addiction with Helm. Buy now and get the desktop app for free."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "Unlock My Discount"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/"
    },
    {
      "type": "text",
      "id": "discount_percent",
      "label": "Discount Percent",
      "default": "30%"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "discounted_price",
      "label": "Discounted Price",
      "default": "$90.30"
    },
    {
      "type": "text",
      "id": "original_price",
      "label": "Original Price",
      "default": "$129"
    },
    {
      "type": "text",
      "id": "stock_message",
      "label": "Stock Message",
      "default": "Only X Left"
    },
    {
      "type": "text",
      "id": "loyalty_message",
      "label": "Loyalty Message",
      "default": "Today only — earn 2X loyalty points on every purchase."
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "Countdown End Date (YYYY-MM-DDTHH:MM:SS)",
      "default": "2025-11-30T23:59:59"
    }
  ],
  "presets": [
    {
      "name": "Black Friday Banner",
      "category": "Promotion"
    }
  ]
}
{% endschema %}

<script>
document.addEventListener("DOMContentLoaded", function() {
  const endDate = new Date("{{ section.settings.end_date }}").getTime();

  const daysEl = document.getElementById("days-{{ section.id }}");
  const hoursEl = document.getElementById("hours-{{ section.id }}");
  const minutesEl = document.getElementById("minutes-{{ section.id }}");
  const secondsEl = document.getElementById("seconds-{{ section.id }}");

  const timer = setInterval(function() {
    const now = new Date().getTime();
    const distance = endDate - now;

    if (distance < 0) {
      clearInterval(timer);
      daysEl.innerText = hoursEl.innerText = minutesEl.innerText = secondsEl.innerText = "00";
      return;
    }

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    daysEl.innerText = days.toString().padStart(2, "0");
    hoursEl.innerText = hours.toString().padStart(2, "0");
    minutesEl.innerText = minutes.toString().padStart(2, "0");
    secondsEl.innerText = seconds.toString().padStart(2, "0");
  }, 1000);
});
</script>

<style>
.black-friday-banner {
  color: #fff;
  padding: 60px 0;
  font-family: "Poppins", sans-serif;
}

.black-friday-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
  flex-wrap: wrap;
  padding: 0 20px;
}

.black-friday-content {
  flex: 1 1 480px;
  min-width: 300px;
}

.headline {
  font-size: 2rem;
  line-height: 1.3;
  margin-bottom: 15px;
}
.highlight {
  color: #e5b80b;
  font-style: italic;
}

.subtext {
  font-size: 1.1rem;
  margin-bottom: 25px;
  color: #ddd;
}

.cta-button {
  display: inline-block;
  background: #fff;
  color: #000;
  padding: 12px 28px;
  border-radius: 30px;
  font-weight: 600;
  text-decoration: none;
  margin-bottom: 30px;
  transition: all 0.3s ease;
}
.cta-button:hover {
  background: #e5b80b;
  color: #000;
}

.countdown {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  margin-bottom: 20px;
}
.count-box {
  background: #f0b000;
  color: #000;
  padding: 10px 15px;
  border-radius: 10px;
  text-align: center;
  min-width: 70px;
}
.count-box span {
  display: block;
  font-size: 1.6rem;
  font-weight: bold;
}
.count-box small {
  font-size: 0.8rem;
}

.note {
  font-size: 1rem;
  color: #ccc;
  margin-top: 10px;
}

.black-friday-image {
  flex: 0 0 300px;
  position: relative;
  text-align: center;
}
.black-friday-image img {
  width: 100%;
  max-width: 300px;
  border-radius: 10px;
}

.discount-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: #f0b000;
  color: #000;
  padding: 8px 14px;
  border-radius: 50%;
  font-weight: 700;
  font-size: 0.9rem;
}

.price-tag {
  position: absolute;
  bottom: 15px;
  right: 10px;
  background: #fff;
  color: #000;
  padding: 6px 12px;
  border-radius: 8px;
  font-weight: 700;
  text-align: left;
}
.price-tag .original {
  text-decoration: line-through;
  color: #888;
  margin-left: 5px;
}
.price-tag small {
  display: block;
  font-size: 0.75rem;
  font-weight: normal;
  color: #d00;
}

@media (max-width: 992px) {
  .headline {
    font-size: 1.6rem;
  }
  .subtext {
    font-size: 1rem;
  }
  .black-friday-image {
    flex: 1 1 100%;
    text-align: center;
  }
}

@media (max-width: 768px) {
  .black-friday-container {
    flex-direction: column;
    text-align: center;
  }

  .headline {
    font-size: 1.5rem;
  }

  .cta-button {
    padding: 10px 22px;
  }

  .countdown {
    justify-content: center;
  }

  .black-friday-image img {
    max-width: 250px;
  }

  .discount-badge {
    font-size: 0.8rem;
  }
}
</style>
