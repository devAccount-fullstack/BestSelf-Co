<section class="black-friday-banner">
  <div class="black-friday-container">
    <div class="black-friday-content">
      <h2 class="headline">
        <span class="highlight">Black Friday:</span> Up to 35% OFF + Free Gifts —<br />
        Tools That Actually Stick.
      </h2>
      <p class="subtext">
        End your phone addiction with Helm.<br />
        Buy now and get the desktop app for free
      </p>
      <a href="#" class="cta-button">Unlock My Discount</a>

      <div class="countdown">
        <div class="count-box"><span id="days">00</span><small>Days</small></div>
        <div class="count-box"><span id="hours">00</span><small>Hours</small></div>
        <div class="count-box"><span id="minutes">00</span><small>Minutes</small></div>
        <div class="count-box"><span id="seconds">00</span><small>Seconds</small></div>
      </div>

      <p class="note">
        Today only — <strong>earn 2X loyalty points</strong> on every purchase.
      </p>
    </div>

    <div class="black-friday-image">
      <div class="discount-badge">30% off</div>
      <img src="{{ 'black-friday-product.png' | asset_url }}" alt="Product" />
      <div class="price-tag">
        <span class="discounted">$90.30</span>
        <span class="original">$129</span>
        <small>Only X Left</small>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Black Friday Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "discount_percent",
      "label": "Discount Percent",
      "default": "30%"
    },
    {
      "type": "text",
      "id": "discounted_price",
      "label": "Discounted Price",
      "default": "$90.30"
    },
    {
      "type": "text",
      "id": "original_price",
      "label": "Original Price",
      "default": "$129"
    },
    {
      "type": "text",
      "id": "cta_link",
      "label": "CTA Link",
      "default": "#"
    },
    {
      "type": "text",
      "id": "end_date",
      "label": "Countdown End Date (YYYY-MM-DDTHH:MM:SS)",
      "default": "2025-11-30T23:59:59"
    }
  ]
}
{% endschema %}

<script>
document.addEventListener("DOMContentLoaded", function() {
  const endDate = new Date("{{ section.settings.end_date }}").getTime();
  const timer = setInterval(function() {
    const now = new Date().getTime();
    const distance = endDate - now;
    if (distance < 0) {
      clearInterval(timer);
      document.querySelectorAll(".countdown span").forEach(el => el.innerHTML = "00");
      return;
    }
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.getElementById("days").innerText = days.toString().padStart(2, '0');
    document.getElementById("hours").innerText = hours.toString().padStart(2, '0');
    document.getElementById("minutes").innerText = minutes.toString().padStart(2, '0');
    document.getElementById("seconds").innerText = seconds.toString().padStart(2, '0');
  }, 1000);
});
</script>

<style>
.black-friday-banner {
  background: linear-gradient(to right, #0c0b1a 50%, #111b36 50%);
  color: #fff;
  padding: 60px 0;
  font-family: "Poppins", sans-serif;
}

.black-friday-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1200px;
  margin: 0 auto;
  gap: 40px;
}

.black-friday-content {
  flex: 1;
}

.headline {
  font-size: 1.8rem;
  line-height: 1.3;
  margin-bottom: 15px;
}
.highlight {
  color: #e5b80b;
  font-style: italic;
}

.subtext {
  font-size: 1rem;
  margin-bottom: 25px;
}

.cta-button {
  display: inline-block;
  background: #fff;
  color: #000;
  padding: 12px 24px;
  border-radius: 30px;
  font-weight: 600;
  text-decoration: none;
  margin-bottom: 30px;
  transition: all 0.3s ease;
}
.cta-button:hover {
  background: #e5b80b;
  color: #000;
}

.countdown {
  display: flex;
  gap: 10px;
  margin-bottom: 20px;
}
.count-box {
  background: #f0b000;
  color: #000;
  padding: 10px 15px;
  border-radius: 10px;
  text-align: center;
  min-width: 60px;
}
.count-box span {
  display: block;
  font-size: 1.5rem;
  font-weight: bold;
}
.count-box small {
  font-size: 0.8rem;
}

.note {
  font-size: 0.95rem;
  color: #ccc;
}

.black-friday-image {
  flex: 0 0 300px;
  position: relative;
}
.black-friday-image img {
  width: 100%;
  border-radius: 10px;
}

.discount-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: #f0b000;
  color: #000;
  padding: 8px 12px;
  border-radius: 50%;
  font-weight: 700;
}

.price-tag {
  position: absolute;
  bottom: 15px;
  right: 10px;
  background: #fff;
  color: #000;
  padding: 6px 12px;
  border-radius: 8px;
  font-weight: 700;
}
.price-tag .original {
  text-decoration: line-through;
  color: #888;
  margin-left: 5px;
}
.price-tag small {
  display: block;
  font-size: 0.75rem;
  font-weight: normal;
  color: #d00;
}

@media (max-width: 768px) {
  .black-friday-container {
    flex-direction: column;
    text-align: center;
  }
  .black-friday-image {
    order: -1;
  }
}
</style>
