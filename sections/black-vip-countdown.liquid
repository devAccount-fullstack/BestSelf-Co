<section id="footer-countdown-{{ section.id }}" class="footer-countdown">
  <div class="countdown-container">
    <div class="countdown-left">
      {% if section.settings.title != blank %}
        <h3 class="countdown-title">{{ section.settings.title }}</h3>
      {% endif %}
      {% if section.settings.content != blank %}
        <p class="countdown-content">{{ section.settings.content }}</p>
      {% endif %}
      {% if section.settings.button_label != blank %}
        <a href="{{ section.settings.button_link }}" class="countdown-btn">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>

    <div class="countdown-right">
      <div id="timer-{{ section.id }}" class="timer">
        <div><span class="time days">00</span><small>Day</small></div>
        <div><span class="time hours">00</span><small>Hours</small></div>
        <div><span class="time minutes">00</span><small>Minutes</small></div>
        <div><span class="time seconds">00</span><small>Seconds</small></div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const countdownEl = document.querySelector("#timer-{{ section.id }}");
      const endDate = new Date("{{ section.settings.end_date }}").getTime();

      function updateCountdown() {
        const now = new Date().getTime();
        const distance = endDate - now;

        if (distance < 0) {
          countdownEl.innerHTML = "<p>Offer Closed</p>";
          return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        countdownEl.querySelector(".days").innerText = String(days).padStart(2, '0');
        countdownEl.querySelector(".hours").innerText = String(hours).padStart(2, '0');
        countdownEl.querySelector(".minutes").innerText = String(minutes).padStart(2, '0');
        countdownEl.querySelector(".seconds").innerText = String(seconds).padStart(2, '0');
      }

      updateCountdown();
      setInterval(updateCountdown, 1000);
    });
  </script>

  <style>
    #footer-countdown-{{ section.id }} {
      font-family: 'Inter', sans-serif;
    }

    .countdown-container {
      display: flex;
      align-items: center;
      gap: 20px;
      background: linear-gradient(90deg, #3e2b1f 0%, #000000 100%);
      color: #ffffff;
      padding: 40px;
      border-radius: 20px;
      width: 80%;
      margin: 0 auto;
    }

    .countdown-title {
      font-size: 20px;
      font-weight: 600;
      margin-bottom: 10px;
    }

    .countdown-content {
      font-size: 14px;
      line-height: 1.6;
      margin-bottom: 20px;
    }

    .countdown-btn {
      display: inline-block;
      padding: 10px 20px;
      border: 1px solid {{ section.settings.text_color }};
      border-radius: 30px;
      text-decoration: none;
      color: {{ section.settings.text_color }};
      transition: all 0.3s ease;
    }

    .countdown-btn:hover {
      background: {{ section.settings.text_color }};
      color: {{ section.settings.gradient_end }};
    }

    @media (max-width: 768px) {
    }
  </style>
</section>

