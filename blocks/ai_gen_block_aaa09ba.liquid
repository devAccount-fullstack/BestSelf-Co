{% doc %}
  @prompt
    Create a split-layout product feature section with:
    
    Left side: Product lifestyle image with overlay badge (Save 13%)
    Right side: Product details including:
    
    Star rating with review count
    Product name as headline
    2-3 sentence product description
    Bulleted list of what's included
    Full-width CTA button with pricing (original price crossed out)
    
    
    Desktop: 50/50 split layout
    Mobile: Stack image on top, content below
    Color scheme: Neutral with yellow accent for badge and button

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: stretch;
    gap: 0;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
  }

  .ai-product-feature-image-{{ ai_gen_id }} {
    position: relative;
    flex: 1;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;}

  .ai-product-feature-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-product-feature-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-product-feature-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.5;
  }

  .ai-product-feature-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    left: 20px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
    z-index: 2;
  }

  .ai-product-feature-content-{{ ai_gen_id }} {
    flex: 1;
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 20px;
  }

  .ai-product-feature-rating-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-product-feature-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
  }

  .ai-product-feature-star-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    color: {{ block.settings.star_color }};
  }

  .ai-product-feature-star-empty-{{ ai_gen_id }} {
    color: {{ block.settings.star_empty_color }};
  }

  .ai-product-feature-review-count-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: 14px;opacity: 0.8;
  }

  .ai-product-feature-title-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 700;
    margin: 0;line-height: 1.2;
  }

  .ai-product-feature-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0;
  }

  .ai-product-feature-includes-{{ ai_gen_id }} {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .ai-product-feature-includes-{{ ai_gen_id }} li {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    padding: 4px 0;
    position: relative;
    padding-left: 20px;
  }

  .ai-product-feature-includes-{{ ai_gen_id }} li::before {
    content: "â€¢";
    color: {{ block.settings.bullet_color }};
    position: absolute;
    left: 0;
    font-weight: bold;
  }

  .ai-product-feature-cta-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 16px 24px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    transition: background-color 0.3s ease;
  }

  .ai-product-feature-cta-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-product-feature-pricing-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-product-feature-original-price-{{ ai_gen_id }} {
    text-decoration: line-through;
    opacity: 0.7;
    font-size: 14px;
  }

  .ai-product-feature-sale-price-{{ ai_gen_id }} {
    font-weight: 700;
  }

  @media screen and (max-width: 768px) {
    .ai-product-feature-{{ ai_gen_id }} {
      flex-direction: column;}

    .ai-product-feature-image-{{ ai_gen_id }} {
      min-height: 300px;
    }

    .ai-product-feature-content-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-product-feature-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-product-feature-badge-{{ ai_gen_id }} {
      top: 15px;
      left: 15px;padding: 6px 12px;
      font-size: 12px;
    }
  }
{% endstyle %}

<div class="ai-product-feature-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-feature-image-{{ ai_gen_id }}">
    {% if block.settings.product_image %}
      <img
        src="{{ block.settings.product_image | image_url: width: 800 }}"
        alt="{{ block.settings.product_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.product_image.width }}"
        height="{{ block.settings.product_image.height }}"
      >
    {% else %}
      <div class="ai-product-feature-image-placeholder-{{ ai_gen_id }}">
        {{ 'product-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
    
    {% if block.settings.show_badge and block.settings.badge_text != blank %}
      <div class="ai-product-feature-badge-{{ ai_gen_id }}">
        {{ block.settings.badge_text }}
      </div>
    {% endif %}
  </div>

  <div class="ai-product-feature-content-{{ ai_gen_id }}">
    {% if block.settings.show_rating %}
      <div class="ai-product-feature-rating-{{ ai_gen_id }}">
        <div class="ai-product-feature-stars-{{ ai_gen_id }}">
          {% for i in (1..5) %}
            <svg
              class="ai-product-feature-star-{{ ai_gen_id }} {% if i > block.settings.rating %}ai-product-feature-star-empty-{{ ai_gen_id }}{% endif %}"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          {% endfor %}
        </div>
        {% if block.settings.review_count != blank %}
          <span class="ai-product-feature-review-count-{{ ai_gen_id }}">
            ({{ block.settings.review_count }} reviews)
          </span>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.product_title != blank %}
      <h2 class="ai-product-feature-title-{{ ai_gen_id }}">
        {{ block.settings.product_title }}
      </h2>
    {% endif %}

    {% if block.settings.product_description != blank %}
      <div class="ai-product-feature-description-{{ ai_gen_id }}">
        {{ block.settings.product_description }}
      </div>
    {% endif %}

    {% if block.settings.show_includes_list %}
      <ul class="ai-product-feature-includes-{{ ai_gen_id }}">
        {% if block.settings.include_item_1 != blank %}
          <li>{{ block.settings.include_item_1 }}</li>
        {% endif %}
        {% if block.settings.include_item_2 != blank %}
          <li>{{ block.settings.include_item_2 }}</li>
        {% endif %}
        {% if block.settings.include_item_3 != blank %}
          <li>{{ block.settings.include_item_3 }}</li>
        {% endif %}
        {% if block.settings.include_item_4 != blank %}
          <li>{{ block.settings.include_item_4 }}</li>
        {% endif %}
        {% if block.settings.include_item_5 != blank %}
          <li>{{ block.settings.include_item_5 }}</li>
        {% endif %}
      </ul>
    {% endif %}<a
      href="{{ block.settings.cta_link }}"
      class="ai-product-feature-cta-{{ ai_gen_id }}"
    >
      <span>{{ block.settings.cta_text }}</span>
      {% if block.settings.show_pricing %}
        <div class="ai-product-feature-pricing-{{ ai_gen_id }}">
          {% if block.settings.original_price != blank %}
            <span class="ai-product-feature-original-price-{{ ai_gen_id }}">
              {{ block.settings.original_price }}
            </span>
          {% endif %}
          {% if block.settings.sale_price != blank %}
            <span class="ai-product-feature-sale-price-{{ ai_gen_id }}">
              {{ block.settings.sale_price }}
            </span>
          {% endif %}
        </div>
      {% endif %}
    </a>
  </div>
</div>

